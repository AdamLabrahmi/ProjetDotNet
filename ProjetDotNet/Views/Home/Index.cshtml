@{
    ViewData["Title"] = "Home Page";
    Layout = null;
}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TaskFlow - Gestion de Projets Collaboratifs</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body class="bg-gradient-to-br from-emerald-50 to-teal-100 min-h-screen">
    <!-- Navigation -->
    <nav class="bg-white shadow-lg">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center h-16">
                <div class="flex items-center">
                    <div class="flex-shrink-0">
                        <h1 class="text-2xl font-bold text-teal-600">
                            <i class="fas fa-tasks mr-2"></i>TaskFlow
                        </h1>
                    </div>
                </div>
                <div class="hidden md:flex items-center space-x-8">
                    <a href="#features" class="text-gray-700 hover:text-teal-600 transition">Fonctionnalités</a>
                    <a href="#pricing" class="text-gray-700 hover:text-teal-600 transition">Tarifs</a>
                    <a href="#about" class="text-gray-700 hover:text-teal-600 transition">À propos</a>
                    <a href="@Url.Action("Login", "Auth")" class="text-teal-600 hover:text-teal-700 font-semibold">Se connecter</a>
                    @* <button class="bg-teal-600 text-white px-6 py-2 rounded-lg hover:bg-teal-700 transition shadow-md">
                        Commencer
                    </button> *@
                </div>
                <div class="md:hidden">
                    <button class="text-gray-700">
                        <i class="fas fa-bars text-2xl"></i>
                    </button>
                </div>
            </div>
        </div>
    </nav>

    <!-- Hero Section -->
    <section class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20">
        <div class="grid md:grid-cols-2 gap-12 items-center">
            <div class="space-y-6">
                <h2 class="text-5xl font-bold text-gray-900 leading-tight">
                    Gérez vos projets en toute <span class="text-teal-600">simplicité</span>
                </h2>
                <p class="text-xl text-gray-600">
                    Collaborez efficacement avec votre équipe, suivez vos tâches en temps réel et atteignez vos objectifs plus rapidement.
                </p>
                <div class="flex space-x-4">
                    <button class="bg-teal-600 text-white px-8 py-4 rounded-lg hover:bg-teal-700 transition shadow-xl text-lg font-semibold">
                        <i class="fas fa-rocket mr-2"></i>Essai gratuit
                    </button>
                    <button class="bg-white text-teal-600 px-8 py-4 rounded-lg hover:bg-gray-50 transition shadow-xl text-lg font-semibold border-2 border-teal-600">
                        <i class="fas fa-play-circle mr-2"></i>Voir la démo
                    </button>
                </div>

            </div>
            <div class="relative">
                <div class="bg-white rounded-2xl shadow-2xl p-8 transform hover:scale-105 transition duration-300">
                    <div class="space-y-4">
                        <div class="flex items-center justify-between bg-teal-50 p-4 rounded-lg">
                            <div class="flex items-center space-x-3">
                                <div class="w-10 h-10 bg-teal-600 rounded-full flex items-center justify-center">
                                    <i class="fas fa-code text-white"></i>
                                </div>
                                <div>
                                    <p class="font-semibold text-gray-800">Développement Frontend</p>
                                    <p class="text-sm text-gray-500">3 tâches restantes</p>
                                </div>
                            </div>
                            <span class="bg-amber-400 text-amber-900 px-3 py-1 rounded-full text-sm font-semibold">En cours</span>
                        </div>
                        <div class="flex items-center justify-between bg-emerald-50 p-4 rounded-lg">
                            <div class="flex items-center space-x-3">
                                <div class="w-10 h-10 bg-emerald-600 rounded-full flex items-center justify-center">
                                    <i class="fas fa-paint-brush text-white"></i>
                                </div>
                                <div>
                                    <p class="font-semibold text-gray-800">Design UI/UX</p>
                                    <p class="text-sm text-gray-500">Terminé</p>
                                </div>
                            </div>
                            <span class="bg-emerald-400 text-emerald-900 px-3 py-1 rounded-full text-sm font-semibold">Fait</span>
                        </div>
                        <div class="flex items-center justify-between bg-cyan-50 p-4 rounded-lg">
                            <div class="flex items-center space-x-3">
                                <div class="w-10 h-10 bg-cyan-600 rounded-full flex items-center justify-center">
                                    <i class="fas fa-database text-white"></i>
                                </div>
                                <div>
                                    <p class="font-semibold text-gray-800">API Backend</p>
                                    <p class="text-sm text-gray-500">5 tâches restantes</p>
                                </div>
                            </div>
                            <span class="bg-cyan-400 text-cyan-900 px-3 py-1 rounded-full text-sm font-semibold">À faire</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Features Section -->
    <section id="features" class="bg-white py-20">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center mb-16">
                <h2 class="text-4xl font-bold text-gray-900 mb-4">Fonctionnalités puissantes</h2>
                <p class="text-xl text-gray-600">Tout ce dont vous avez besoin pour réussir vos projets</p>
            </div>
            <div class="grid md:grid-cols-3 gap-8">
                <div class="bg-gradient-to-br from-teal-50 to-emerald-50 p-8 rounded-xl shadow-lg hover:shadow-2xl transition transform hover:-translate-y-2">
                    <div class="w-16 h-16 bg-teal-600 rounded-lg flex items-center justify-center mb-6">
                        <i class="fas fa-users text-white text-2xl"></i>
                    </div>
                    <h3 class="text-2xl font-bold text-gray-900 mb-4">Collaboration en temps réel</h3>
                    <p class="text-gray-600">Travaillez ensemble sur les mêmes projets, partagez des fichiers et communiquez instantanément.</p>
                </div>
                <div class="bg-gradient-to-br from-cyan-50 to-teal-50 p-8 rounded-xl shadow-lg hover:shadow-2xl transition transform hover:-translate-y-2">
                    <div class="w-16 h-16 bg-cyan-600 rounded-lg flex items-center justify-center mb-6">
                        <i class="fas fa-chart-line text-white text-2xl"></i>
                    </div>
                    <h3 class="text-2xl font-bold text-gray-900 mb-4">Suivi de progression</h3>
                    <p class="text-gray-600">Visualisez l'avancement de vos projets avec des tableaux de bord intuitifs et des rapports détaillés.</p>
                </div>
                <div class="bg-gradient-to-br from-emerald-50 to-green-50 p-8 rounded-xl shadow-lg hover:shadow-2xl transition transform hover:-translate-y-2">
                    <div class="w-16 h-16 bg-emerald-600 rounded-lg flex items-center justify-center mb-6">
                        <i class="fas fa-bell text-white text-2xl"></i>
                    </div>
                    <h3 class="text-2xl font-bold text-gray-900 mb-4">Notifications intelligentes</h3>
                    <p class="text-gray-600">Restez informé des mises à jour importantes sans être submergé de notifications.</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Stats Section -->
    <section class="bg-teal-600 py-16">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="grid md:grid-cols-4 gap-8 text-center text-white">
                <div>
                    <p class="text-5xl font-bold mb-2">10K+</p>
                    <p class="text-teal-200">Utilisateurs actifs</p>
                </div>
                <div>
                    <p class="text-5xl font-bold mb-2">50K+</p>
                    <p class="text-teal-200">Projets créés</p>
                </div>
                <div>
                    <p class="text-5xl font-bold mb-2">98%</p>
                    <p class="text-teal-200">Satisfaction client</p>
                </div>
                <div>
                    <p class="text-5xl font-bold mb-2">24/7</p>
                    <p class="text-teal-200">Support disponible</p>
                </div>
            </div>
        </div>
    </section>

    <!-- CTA Section -->
    <section class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20">
        <div class="bg-gradient-to-r from-teal-600 to-emerald-600 rounded-3xl shadow-2xl p-12 text-center text-white">
            <h2 class="text-4xl font-bold mb-4">Prêt à transformer votre gestion de projet ?</h2>
            <p class="text-xl mb-8 text-teal-100">Rejoignez des milliers d'équipes qui font confiance à TaskFlow</p>
            <button class="bg-white text-teal-600 px-10 py-4 rounded-lg hover:bg-gray-100 transition shadow-xl text-lg font-semibold">
                Commencer gratuitement <i class="fas fa-arrow-right ml-2"></i>
            </button>
        </div>
    </section>

    <!-- Footer -->
    <footer class="bg-gray-900 text-gray-300 py-12">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="grid md:grid-cols-4 gap-8">
                <div>
                    <h3 class="text-white text-xl font-bold mb-4">
                        <i class="fas fa-tasks mr-2"></i>TaskFlow
                    </h3>
                    <p class="text-sm">Gérez vos projets avec efficacité et simplicité.</p>
                </div>
                <div>
                    <h4 class="text-white font-semibold mb-4">Produit</h4>
                    <ul class="space-y-2 text-sm">
                        <li><a href="#" class="hover:text-white transition">Fonctionnalités</a></li>
                        <li><a href="#" class="hover:text-white transition">Tarifs</a></li>
                        <li><a href="#" class="hover:text-white transition">Sécurité</a></li>
                    </ul>
                </div>
                <div>
                    <h4 class="text-white font-semibold mb-4">Entreprise</h4>
                    <ul class="space-y-2 text-sm">
                        <li><a href="#" class="hover:text-white transition">À propos</a></li>
                        <li><a href="#" class="hover:text-white transition">Blog</a></li>
                        <li><a href="#" class="hover:text-white transition">Carrières</a></li>
                    </ul>
                </div>
                <div>
                    <h4 class="text-white font-semibold mb-4">Suivez-nous</h4>
                    <div class="flex space-x-4">
                        <a href="#" class="hover:text-white transition"><i class="fab fa-twitter text-xl"></i></a>
                        <a href="#" class="hover:text-white transition"><i class="fab fa-linkedin text-xl"></i></a>
                        <a href="#" class="hover:text-white transition"><i class="fab fa-facebook text-xl"></i></a>
                    </div>
                </div>
            </div>
            <div class="border-t border-gray-800 mt-8 pt-8 text-center text-sm">
                <p>&copy; 2024 TaskFlow. Tous droits réservés.</p>
            </div>
        </div>
    </footer>
</body>
</html>