@model ProjetDotNet.Models.Organisations
@{
    ViewBag.Title = "Supprimer l'organisation";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<!-- En-tête avec avertissement -->
<div class="mb-6">
    <div class="flex items-center space-x-3 mb-2">
        <i class="fas fa-exclamation-triangle text-red-600 text-3xl"></i>
        <h2 class="text-3xl font-bold text-red-600">Supprimer l'organisation</h2>
    </div>
    <p class="text-gray-600">Cette action est irréversible et supprimera toutes les données associées</p>
</div>

<div class="max-w-4xl mx-auto">

    <!-- Bannière d'avertissement -->
    <div class="bg-red-50 border-l-4 border-red-500 p-6 rounded-lg mb-6">
        <div class="flex items-start">
            <i class="fas fa-shield-alt text-red-500 text-2xl mr-4 mt-1"></i>
            <div class="flex-1">
                <h3 class="text-red-800 font-bold text-lg mb-2">⚠️ Attention : Action irréversible</h3>
                <p class="text-red-700 mb-3">
                    Vous êtes sur le point de supprimer définitivement cette organisation.
                    Cette action supprimera :
                </p>
                <ul class="text-red-700 space-y-1 ml-4">
                    <li class="flex items-center space-x-2">
                        <i class="fas fa-times-circle text-xs"></i>
                        <span>Tous les projets associés</span>
                    </li>
                    <li class="flex items-center space-x-2">
                        <i class="fas fa-times-circle text-xs"></i>
                        <span>Toutes les tâches et sous-tâches</span>
                    </li>
                    <li class="flex items-center space-x-2">
                        <i class="fas fa-times-circle text-xs"></i>
                        <span>Tous les membres et leurs permissions</span>
                    </li>
                    <li class="flex items-center space-x-2">
                        <i class="fas fa-times-circle text-xs"></i>
                        <span>Toutes les données et fichiers liés</span>
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <!-- Carte de l'organisation à supprimer -->
    <div class="bg-white rounded-xl shadow-lg overflow-hidden mb-6">
        <!-- En-tête rouge -->
        <div class="bg-gradient-to-r from-red-500 to-red-600 p-6">
            <div class="flex items-center space-x-4 text-white">
                <div class="w-16 h-16 bg-white bg-opacity-20 rounded-xl flex items-center justify-center">
                    <i class="fas fa-building text-3xl"></i>
                </div>
                <div>
                    <p class="text-red-100 text-sm font-medium">Organisation à supprimer</p>
                    <h3 class="text-2xl font-bold">@Model.Nom</h3>
                </div>
            </div>
        </div>

        <!-- Contenu -->
        <div class="p-6">
            @if (!string.IsNullOrEmpty(Model.Description))
            {
                <div class="mb-4">
                    <label class="text-sm font-semibold text-gray-500 uppercase tracking-wide">Description</label>
                    <p class="text-gray-700 mt-1">@Model.Description</p>
                </div>
            }

            <div class="grid grid-cols-2 gap-4 pt-4 border-t border-gray-200">
                <div>
                    <label class="text-sm font-semibold text-gray-500 uppercase tracking-wide">ID</label>
                    <p class="text-gray-800 font-medium">@Model.OrgID</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Confirmation et formulaire -->
    <div class="bg-white rounded-xl shadow-lg p-8">
        <h3 class="text-xl font-bold text-gray-800 mb-4 flex items-center">
            <i class="fas fa-check-circle text-gray-600 mr-2"></i>
            Confirmation requise
        </h3>
        <p class="text-gray-600 mb-6">
            Êtes-vous absolument sûr de vouloir supprimer cette organisation ?
            Tapez le nom de l'organisation ci-dessous pour confirmer :
        </p>

        <!-- Champ de confirmation -->
        <div class="mb-6">
            <label class="block text-sm font-semibold text-gray-700 mb-2">
                Tapez "<span class="text-red-600 font-bold">@Model.Nom</span>" pour confirmer
            </label>
            <input type="text"
                   id="confirmName"
                   class="w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:outline-none focus:border-red-500 focus:ring-2 focus:ring-red-200 transition duration-200"
                   placeholder="Nom de l'organisation" />
        </div>

        <form asp-action="Delete" method="post" id="deleteForm">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="OrgID" />

            <div class="flex gap-3">
                <button type="submit"
                        id="deleteButton"
                        disabled
                        class="flex-1 bg-red-600 text-white font-semibold px-6 py-3 rounded-lg hover:bg-red-700 transition duration-200 shadow-lg disabled:bg-gray-300 disabled:cursor-not-allowed disabled:hover:bg-gray-300 flex items-center justify-center space-x-2">
                    <i class="fas fa-trash-alt"></i>
                    <span>Supprimer définitivement</span>
                </button>
                <a href="@Url.Action("Index")"
                   class="flex-1 bg-gray-200 text-gray-700 font-semibold px-6 py-3 rounded-lg hover:bg-gray-300 transition duration-200 flex items-center justify-center space-x-2">
                    <i class="fas fa-times"></i>
                    <span>Annuler</span>
                </a>
            </div>
        </form>
    </div>

    <!-- Information supplémentaire -->
    <div class="bg-blue-50 rounded-xl p-4 mt-6 border border-blue-200">
        <div class="flex items-start space-x-3">
            <i class="fas fa-info-circle text-blue-600 text-lg mt-0.5"></i>
            <div class="text-sm text-blue-800">
                <p class="font-semibold mb-1">Besoin d'aide ?</p>
                <p>Si vous souhaitez simplement archiver cette organisation au lieu de la supprimer, contactez le support.</p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Validation du nom pour activer le bouton de suppression
        const confirmInput = document.getElementById('confirmName');
        const deleteButton = document.getElementById('deleteButton');
        const expectedName = '@Model.Nom';

        confirmInput.addEventListener('input', function() {
            if (this.value === expectedName) {
                deleteButton.disabled = false;
                deleteButton.classList.remove('disabled:bg-gray-300', 'disabled:cursor-not-allowed');
            } else {
                deleteButton.disabled = true;
                deleteButton.classList.add('disabled:bg-gray-300', 'disabled:cursor-not-allowed');
            }
        });

        // REMARQUE : aucune boîte de dialogue browser "confirm" — la suppression se fait directement
        // si le bouton est activé et l'utilisateur soumet le formulaire.
    </script>
}