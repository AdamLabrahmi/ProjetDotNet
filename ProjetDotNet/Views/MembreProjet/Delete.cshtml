@model ProjetDotNet.Models.MembreProjet
@{
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
    ViewBag.Title = "Retirer membre du projet";
}

<div class="max-w-2xl mx-auto">
    <h2 class="text-2xl font-bold mb-4">Retirer le membre</h2>

    <div class="bg-white rounded-lg p-4 border mb-4">
        <div class="mb-2">
            <label class="text-sm text-gray-600">Utilisateur</label>
            <div class="font-medium">@Model.Utilisateur?.Nom ?? "Utilisateur inconnu"</div>
            <div class="text-sm text-gray-500">@Model.Utilisateur?.Email</div>
        </div>
        <div>
            <label class="text-sm text-gray-600">Rôle actuel</label>
            <div class="font-medium">@Model.Role.ToString()</div>
        </div>
    </div>

    <form asp-controller="MembreProjet" asp-action="Delete" method="post" onsubmit="return confirm('Retirer ce membre du projet ?');">
        @Html.AntiForgeryToken()
        <input type="hidden" name="projectId" value="@Model.ProjectID" />
        <input type="hidden" name="userId" value="@Model.UserID" />

        <div class="flex gap-2">
            <button type="submit" class="bg-red-600 text-white px-4 py-2 rounded">Retirer</button>
            <a asp-controller="Projects" asp-action="Details" asp-route-id="@Model.ProjectID" class="px-4 py-2 border rounded text-gray-700">Annuler</a>
        </div>
    </form>
</div>