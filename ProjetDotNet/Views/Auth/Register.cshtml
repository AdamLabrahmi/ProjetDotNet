@{
    ViewBag.Title = "Inscription";
    Layout = null;
}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inscription - TaskFlow</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body class="bg-gradient-to-br from-emerald-50 via-teal-50 to-cyan-50 min-h-screen">
    <div class="min-h-screen flex items-center justify-center p-4">
        <div class="w-full max-w-md">
            <!-- Logo et Titre -->
            <div class="text-center mb-8">
                <div class="inline-flex items-center justify-center w-16 h-16 bg-teal-600 rounded-2xl shadow-lg mb-4">
                    <i class="fas fa-tasks text-white text-2xl"></i>
                </div>
                <h1 class="text-3xl font-bold text-gray-900">TaskFlow</h1>
                <p class="text-gray-600 mt-2">Créez votre compte gratuitement</p>
            </div>

            <!-- Formulaire d'inscription -->
            <div class="bg-white rounded-2xl shadow-2xl p-8 backdrop-blur-sm">
                <h2 class="text-2xl font-bold text-gray-900 mb-6">Créer un compte</h2>

                <form method="post" class="space-y-5">
                    <!-- Nom -->
                    <div>
                        <label class="block text-sm font-semibold text-gray-700 mb-2">
                            <i class="fas fa-user text-teal-600 mr-2"></i>Nom complet
                        </label>
                        <input type="text" name="name" required
                               class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:outline-none focus:border-teal-500 focus:ring-2 focus:ring-teal-200 transition duration-200"
                               placeholder="Votre nom complet" />
                    </div>

                    <!-- Email -->
                    <div>
                        <label class="block text-sm font-semibold text-gray-700 mb-2">
                            <i class="fas fa-envelope text-teal-600 mr-2"></i>Email
                        </label>
                        <input type="email" name="email" required
                               class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:outline-none focus:border-teal-500 focus:ring-2 focus:ring-teal-200 transition duration-200"
                               placeholder="votre@email.com" />
                    </div>

                    <!-- Téléphone -->
                    <div>
                        <label class="block text-sm font-semibold text-gray-700 mb-2">
                            <i class="fas fa-phone text-teal-600 mr-2"></i>Téléphone <span class="text-gray-400 text-xs">(optionnel)</span>
                        </label>
                        <input type="text" name="phone"
                               class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:outline-none focus:border-teal-500 focus:ring-2 focus:ring-teal-200 transition duration-200"
                               placeholder="+212 6XX XXX XXX" />
                    </div>

                    <!-- Mot de passe -->
                    <div>
                        <label class="block text-sm font-semibold text-gray-700 mb-2">
                            <i class="fas fa-lock text-teal-600 mr-2"></i>Mot de passe
                        </label>
                        <input type="password" name="password" required
                               class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:outline-none focus:border-teal-500 focus:ring-2 focus:ring-teal-200 transition duration-200"
                               placeholder="••••••••" />
                        <p class="mt-1 text-xs text-gray-500">
                            <i class="fas fa-info-circle mr-1"></i>Au moins 8 caractères
                        </p>
                    </div>

                    <!-- Confirmation mot de passe -->
                    <div>
                        <label class="block text-sm font-semibold text-gray-700 mb-2">
                            <i class="fas fa-lock text-teal-600 mr-2"></i>Confirmer le mot de passe
                        </label>
                        <input type="password" name="confirmPassword" required
                               class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:outline-none focus:border-teal-500 focus:ring-2 focus:ring-teal-200 transition duration-200"
                               placeholder="••••••••" />
                    </div>

                    <!-- Accepter les conditions -->
                    <div class="flex items-start">
                        <input type="checkbox" required
                               class="w-4 h-4 mt-1 text-teal-600 border-gray-300 rounded focus:ring-teal-500" />
                        <label class="ml-2 text-sm text-gray-600">
                            J'accepte les
                            <a href="#" class="text-teal-600 hover:text-teal-700 font-medium hover:underline">conditions d'utilisation</a>
                            et la
                            <a href="#" class="text-teal-600 hover:text-teal-700 font-medium hover:underline">politique de confidentialité</a>
                        </label>
                    </div>

                    <!-- Bouton d'inscription -->
                    <button type="submit"
                            class="w-full bg-gradient-to-r from-teal-600 to-emerald-600 text-white font-semibold py-3 rounded-lg hover:from-teal-700 hover:to-emerald-700 transition duration-200 shadow-lg hover:shadow-xl transform hover:-translate-y-0.5">
                        <i class="fas fa-user-plus mr-2"></i>Créer mon compte
                    </button>
                </form>

                <!-- Divider -->
                @* <div class="relative my-6">
                    <div class="absolute inset-0 flex items-center">
                        <div class="w-full border-t border-gray-300"></div>
                    </div>
                    <div class="relative flex justify-center text-sm">
                        <span class="px-4 bg-white text-gray-500">ou s'inscrire avec</span>
                    </div>
                </div> *@

                <!-- Connexion sociale -->
                @* <div class="grid grid-cols-2 gap-3">
                    <button class="flex items-center justify-center px-4 py-3 border-2 border-gray-200 rounded-lg hover:bg-gray-50 transition duration-200">
                        <i class="fab fa-google text-red-500 mr-2"></i>
                        <span class="text-sm font-medium text-gray-700">Google</span>
                    </button>
                    <button class="flex items-center justify-center px-4 py-3 border-2 border-gray-200 rounded-lg hover:bg-gray-50 transition duration-200">
                        <i class="fab fa-microsoft text-blue-500 mr-2"></i>
                        <span class="text-sm font-medium text-gray-700">Microsoft</span>
                    </button>
                </div> *@

                <!-- Lien connexion -->
                <p class="text-center text-sm text-gray-600 mt-6">
                    Vous avez déjà un compte ?
                    <a href="@Url.Action("Login", "Auth")" class="text-teal-600 font-semibold hover:text-teal-700 hover:underline">
                        Se connecter
                    </a>
                </p>
            </div>

            <!-- Lien retour -->
            <div class="text-center mt-6">
                <a href="@Url.Action("Index", "Home")" class="text-gray-600 hover:text-teal-600 transition duration-200">
                    <i class="fas fa-arrow-left mr-2"></i>Retour à l'accueil
                </a>
            </div>
        </div>
    </div>
</body>
</html>