@model ProjetDotNet.Models.Tache
@using ProjetDotNet.Models.Enums
@{
    ViewBag.Title = "Détails de la tâche";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="max-w-4xl mx-auto">
    <div class="bg-white rounded-xl shadow p-6">
        <div class="flex items-start justify-between">
            <div>
                <h1 class="text-2xl font-bold">@Model.Titre</h1>
                <p class="text-sm text-gray-500">ID: @Model.TacheID</p>
            </div>
            <div class="text-right">
                <a asp-action="Edit" asp-route-id="@Model.TacheID" class="px-3 py-2 bg-white border rounded hover:bg-gray-50">Modifier</a>
                <a asp-action="Delete" asp-route-id="@Model.TacheID" class="px-3 py-2 bg-red-600 text-white rounded hover:bg-red-700">Supprimer</a>
            </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mt-6">
            <div>
                <h3 class="text-sm text-gray-500">Description</h3>
                <p class="mt-2 text-gray-700 whitespace-pre-wrap">@Model.Description ?? "Aucune description"</p>

                <h3 class="text-sm text-gray-500 mt-4">Projet</h3>
                <p class="mt-2">@Model.Projet?.Nom ?? "—"</p>

                <h3 class="text-sm text-gray-500 mt-4">Sprint</h3>
                <p class="mt-2">@Model.Sprint?.Nom ?? "—"</p>
            </div>

            <div>
                <h3 class="text-sm text-gray-500">Statut</h3>
                <p class="mt-2">@Model.Statut</p>

                <h3 class="text-sm text-gray-500 mt-4">Priorité</h3>
                <p class="mt-2">@Model.Priorite</p>

                <h3 class="text-sm text-gray-500 mt-4">Assigné / Créateur</h3>
                <p class="mt-2">@Model.Assignee?.Nom ?? "—" / @Model.Createur?.Nom ?? "—"</p>

                <h3 class="text-sm text-gray-500 mt-4">Estimation / Restant</h3>
                <p class="mt-2">@Model.EstimationDur h / @Model.TempsRestant h</p>
            </div>
        </div>

        <div class="mt-6 text-sm text-gray-500">
            <p>Date création : @Model.DateCreation.ToString("dd MMMM yyyy HH:mm")</p>
            @if (Model.DateMiseAJour.HasValue)
            {
                <p>Date mise à jour : @Model.DateMiseAJour.Value.ToString("dd MMMM yyyy HH:mm")</p>
            }
            @if (Model.DateResolution.HasValue)
            {
                <p>Date résolution : @Model.DateResolution.Value.ToString("dd MMMM yyyy HH:mm")</p>
            }
        </div>
    </div>
</div>