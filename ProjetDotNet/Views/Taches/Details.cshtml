@model ProjetDotNet.Models.Tache
@using ProjetDotNet.Models.Enums
@using ProjetDotNet.Helpers
@inject ProjetDotNet.Data.AppDbContext _db
@{
    ViewBag.Title = "Détails de la tâche";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";

    var current = AuthorizationHelper.GetCurrentUserId(User, _db);
    var isSiteAdmin = AuthorizationHelper.IsSiteAdmin(_db, current);

    var projectId = Model.ProjectID ?? 0;
    var isProjectRoleAllowed = _db.MembreProjets.Any(mp =>
        mp.ProjectID == projectId &&
        mp.UserID == current &&
        (mp.Role == RoleProjet.Administrateur || mp.Role == RoleProjet.ScrumMaster || mp.Role == RoleProjet.ProductOwner)
    );

    var orgId = _db.Projets.Where(p => p.ProjectID == projectId).Select(p => p.OrgID).FirstOrDefault();
    var teamIdsOfOrg = _db.Equipes.Where(e => e.OrgID == orgId).Select(e => e.TeamID);
    var isTeamRoleAllowed = teamIdsOfOrg.Any()
        && _db.MembreEquipes.Any(me =>
            teamIdsOfOrg.Contains(me.TeamID) &&
            me.UserID == current &&
            (me.Role == RoleEquipe.Admin || me.Role == RoleEquipe.ScrumMaster || me.Role == RoleEquipe.ProductOwner)
    );

    var canManageThisTask = isSiteAdmin || isProjectRoleAllowed || isTeamRoleAllowed;

    // Icône selon le type de tâche
    string typeIcon = Model.Type switch
    {
        TypeTache.FEATURE => "fa-book",
        TypeTache.BUG => "fa-bug",
        TypeTache.TASK => "fa-tasks",
        _ => "fa-circle"
    };

    // Badge de statut
    string statutBadge = Model.Statut switch
    {
        StatutTache.A_FAIRE => "bg-gray-100 text-gray-800",
        StatutTache.EN_COURS => "bg-yellow-100 text-yellow-800",
        StatutTache.TERMINE => "bg-green-100 text-green-800",
        _ => "bg-gray-100 text-gray-800"
    };

    string priorityColor = Model.Priorite switch
    {
        PrioriteTache.HAUTE => "text-red-600",
        PrioriteTache.MOYENNE => "text-yellow-600",
        PrioriteTache.BASSE => "text-blue-600",
        _ => "text-gray-600"
    };
}

<div class="max-w-6xl mx-auto space-y-6">
    <!-- En-tête simplifié -->
    <div class="flex items-center justify-between">
        <div>
            <h1 class="text-3xl font-bold text-gray-800">@Model.Titre</h1>
            <p class="text-sm text-gray-500">
                <i class="fas @typeIcon mr-1"></i>@Model.Type
                @if (Model.Projet != null)
                {
                    <span class="mx-2">•</span>
                    <span>Projet: @Model.Projet.Nom</span>
                }
            </p>
        </div>
        <div class="flex items-center space-x-2">
            @if (canManageThisTask)
            {
                <a asp-action="Edit" asp-route-id="@Model.TacheID"
                   class="px-4 py-2 bg-teal-600 text-white rounded hover:bg-teal-700">
                    <i class="fas fa-edit mr-2"></i>Modifier
                </a>
            }
            <a asp-action="Index"
               class="px-4 py-2 bg-gray-200 text-gray-700 rounded hover:bg-gray-300">
                Retour
            </a>
        </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        <!-- Colonne principale (2/3) -->
        <div class="lg:col-span-2 space-y-6">

            <!-- Détails principaux -->
            <div class="bg-white rounded-xl shadow p-6">
                <h2 class="text-xl font-semibold text-gray-800 mb-4">Détails</h2>
                <div class="text-sm text-gray-700 space-y-2">
                    <div class="flex items-center">
                        <strong class="w-32">Statut :</strong>
                        <span class="@statutBadge px-3 py-1 rounded-full text-xs font-semibold">
                            @Model.Statut
                        </span>
                    </div>
                    <div class="flex items-center">
                        <strong class="w-32">Priorité :</strong>
                        <span class="@priorityColor font-semibold">@Model.Priorite</span>
                    </div>
                    <div class="flex items-center">
                        <strong class="w-32">Type :</strong>
                        <span><i class="fas @typeIcon mr-1"></i>@Model.Type</span>
                    </div>
                    <div class="flex items-center">
                        <strong class="w-32">Estimation :</strong>
                        <span>@Model.EstimationDur h</span>
                    </div>
                    <div class="flex items-center">
                        <strong class="w-32">Temps restant :</strong>
                        <span>@Model.TempsRestant h</span>
                    </div>
                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <div class="pt-3 border-t">
                            <strong>Description :</strong>
                            <p class="mt-2 text-gray-600 whitespace-pre-wrap">@Model.Description</p>
                        </div>
                    }
                </div>
            </div>

            <!-- Assignation -->
            <div class="bg-white rounded-xl shadow p-6">
                <h3 class="text-lg font-semibold mb-4">Assignation</h3>

                <div class="space-y-4">
                    <div>
                        <label class="text-xs font-semibold text-gray-500 uppercase">Assigné à</label>
                        @if (Model.Assignee != null)
                        {
                            <div class="flex items-center space-x-3 mt-2 p-3 rounded-lg border border-gray-100">
                                <div class="w-10 h-10 bg-teal-500 rounded-full flex items-center justify-center text-white font-semibold">
                                    @Model.Assignee.Nom.Substring(0, 1).ToUpper()
                                </div>
                                <div>
                                    <div class="font-medium text-gray-800">@Model.Assignee.Nom</div>
                                    <div class="text-xs text-gray-500">@Model.Assignee.Email</div>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="mt-2 text-gray-500 italic text-sm">Non assigné</div>
                        }
                    </div>

                    <div class="border-t pt-4">
                        <label class="text-xs font-semibold text-gray-500 uppercase">Créé par</label>
                        @if (Model.Createur != null)
                        {
                            <div class="flex items-center space-x-3 mt-2">
                                <div class="w-8 h-8 bg-gray-300 rounded-full flex items-center justify-center">
                                    <span class="text-gray-700 font-semibold text-xs">@Model.Createur.Nom.Substring(0, 1).ToUpper()</span>
                                </div>
                                <div>
                                    <div class="font-medium text-gray-800 text-sm">@Model.Createur.Nom</div>
                                    <div class="text-xs text-gray-500">
                                        <i class="fas fa-calendar-alt mr-1"></i>
                                        @Model.DateCreation.ToString("dd MMMM yyyy HH:mm")
                                    </div>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="mt-2 text-gray-500 italic text-sm">Inconnu</div>
                        }
                    </div>
                </div>
            </div>

            <!-- Sprint associé -->
            @if (Model.Sprint != null)
            {
                <div class="bg-white rounded-xl shadow p-6">
                    <div class="flex items-center justify-between mb-4">
                        <h3 class="text-lg font-semibold">Sprint associé</h3>
                        <a asp-controller="Sprints" asp-action="Details" asp-route-id="@Model.Sprint.SprintID"
                           class="px-3 py-1 text-sm text-gray-600 border rounded hover:bg-gray-50">
                            Voir
                        </a>
                    </div>

                    <div class="flex items-center space-x-3 p-3 rounded-lg border border-gray-100">
                        <div class="w-10 h-10 bg-indigo-500 rounded-lg flex items-center justify-center">
                            <i class="fas fa-running text-white"></i>
                        </div>
                        <div>
                            <div class="font-medium text-gray-800">@Model.Sprint.Nom</div>
                            <div class="text-xs text-gray-500">
                                @Model.Sprint.DateDebut.ToString("dd MMM yyyy") - @Model.Sprint.DateFin.ToString("dd MMM yyyy")
                            </div>
                        </div>
                    </div>
                </div>
            }

            <!-- Projet associé -->
            @if (Model.Projet != null)
            {
                <div class="bg-white rounded-xl shadow p-6">
                    <div class="flex items-center justify-between mb-4">
                        <h3 class="text-lg font-semibold">Projet associé</h3>
                        <a asp-controller="Projects" asp-action="Details" asp-route-id="@Model.Projet.ProjectID"
                           class="px-3 py-1 text-sm text-gray-600 border rounded hover:bg-gray-50">
                            Voir
                        </a>
                    </div>

                    <div class="flex items-center space-x-3 p-3 rounded-lg border border-gray-100">
                        <div class="w-10 h-10 bg-teal-500 rounded-lg flex items-center justify-center">
                            <span class="text-white font-bold text-sm">@(Model.Projet.CleProjet ?? "P")</span>
                        </div>
                        <div>
                            <div class="font-medium text-gray-800">@Model.Projet.Nom</div>
                            <div class="text-xs text-gray-500">@(Model.Projet.CleProjet ?? "Aucune clé")</div>
                        </div>
                    </div>
                </div>
            }

            <!-- Commentaires -->
            @* <div class="bg-white rounded-xl shadow p-6">
                <div class="flex items-center justify-between mb-4">
                    <h3 class="text-lg font-semibold">Commentaires (@(Model.Commentaires?.Count() ?? 0))</h3>
                </div>

                <div class="space-y-3">
                    @if (Model.Commentaires != null && Model.Commentaires.Any())
                    {
                        foreach (var c in Model.Commentaires.OrderByDescending(cm => cm.DateCreation))
                        {
                            <div class="flex items-start space-x-3 p-3 rounded-lg border border-gray-100">
                                <div class="w-10 h-10 bg-teal-500 rounded-full flex items-center justify-center text-white font-semibold flex-shrink-0">
                                    @(c.Utilisateur?.Nom?.Substring(0, 1).ToUpper() ?? "?")
                                </div>
                                <div class="flex-1">
                                    <div class="flex items-center justify-between mb-1">
                                        <span class="font-medium text-gray-800 text-sm">
                                            @(c.Utilisateur?.Nom ?? c.Utilisateur?.Email ?? "Utilisateur")
                                        </span>
                                        <span class="text-xs text-gray-500">
                                            @c.DateCreation.ToString("dd MMM yyyy HH:mm")
                                        </span>
                                    </div>
                                    <p class="text-gray-700 text-sm">@c.Contenu</p>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-gray-500 italic text-center py-4">Aucun commentaire pour cette tâche.</div>
                    }
                </div>
            </div> *@
        </div>

        <!-- Colonne droite (1/3) -->
        <aside class="space-y-6">

            @if (canManageThisTask)
            {
                <!-- Actions -->
                <div class="bg-white rounded-xl shadow p-6">
                    <h4 class="font-semibold text-gray-800 mb-2">Actions</h4>
                    <div class="space-y-2">
                        <a asp-action="Edit" asp-route-id="@Model.TacheID"
                           class="block px-4 py-2 border rounded text-center hover:bg-gray-50">
                            Modifier la tâche
                        </a>
                        <a asp-action="Delete" asp-route-id="@Model.TacheID"
                           class="block px-4 py-2 bg-red-600 text-white rounded text-center hover:bg-red-700">
                            Supprimer
                        </a>
                    </div>
                </div>
            }
            else if (Model.AssigneeID.HasValue && Model.AssigneeID.Value == current)
            {
                <!-- Info pour l'assigné -->
                <div class="bg-blue-50 rounded-xl shadow p-6 border border-blue-200">
                    <div class="flex items-center space-x-3 mb-3">
                        <i class="fas fa-info-circle text-blue-600 text-xl"></i>
                        <h3 class="font-bold text-gray-800">Information</h3>
                    </div>
                    <p class="text-sm text-gray-700">
                        Vous pouvez changer le statut de cette tâche depuis la liste des tâches.
                    </p>
                </div>
            }
            else
            {
                <!-- Pas de droits -->
                <div class="bg-gray-50 rounded-xl shadow p-6 border border-gray-200">
                    <div class="flex items-center space-x-3 mb-3">
                        <i class="fas fa-lock text-gray-600 text-xl"></i>
                        <h3 class="font-bold text-gray-800">Accès limité</h3>
                    </div>
                    <p class="text-sm text-gray-700">
                        Vous n'avez pas les droits pour modifier cette tâche.
                    </p>
                </div>
            }

            <!-- Résumé rapide -->
