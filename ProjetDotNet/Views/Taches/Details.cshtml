                        </div>
                    </div>
                    <div class="bg-white rounded-lg p-3">
                        <div class="flex items-center justify-between">
                            <span class="text-gray-600">Restant</span>
                            <span class="font-bold text-gray-800">@Model.TempsRestant h</span>
                        </div>
                    </div>
                    <div class="bg-white rounded-lg p-3">
                        <div class="flex items-center justify-between">
                            <span class="text-gray-600">Commentaires</span>
                            <span class="font-bold text-gray-800">@(Model.Commentaires?.Count() ?? 0)</span>
                        </div>
                    </div>
                </div>
            </div> *@
        </aside>
    </div>
</div>

@section Scripts {
