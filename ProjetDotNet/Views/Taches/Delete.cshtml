@model ProjetDotNet.Models.Tache
@{
    ViewBag.Title = "Supprimer la tâche";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="max-w-md mx-auto">
    <h1 class="text-2xl font-bold mb-4 text-red-600">Supprimer la tâche</h1>

    <div class="bg-white p-6 rounded-xl shadow mb-4">
        <p class="font-semibold">Titre</p>
        <p class="mb-3">@Model.Titre</p>

        <p class="font-semibold">Projet</p>
        <p class="mb-3">@Model.Projet?.Nom ?? "—"</p>

        <p class="font-semibold">Assigné</p>
        <p class="mb-3">@Model.Assignee?.Nom ?? "—"</p>

        <p class="text-gray-600">Confirmez-vous la suppression de cette tâche ?</p>
    </div>

    <form asp-action="Delete" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="TacheID" />
        <div class="flex justify-end space-x-2">
            <a asp-action="Index" class="px-4 py-2 rounded border">Annuler</a>
            <button type="submit" class="px-4 py-2 rounded bg-red-600 text-white">Supprimer</button>
        </div>
    </form>
</div>