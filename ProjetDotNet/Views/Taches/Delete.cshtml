@model ProjetDotNet.Models.Tache
@using ProjetDotNet.Models.Enums
@{
    ViewBag.Title = "Supprimer la tâche";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";

    // Icône selon le type de tâche
    string typeIcon = Model.Type switch
    {
        TypeTache.FEATURE => "fa-book",
        TypeTache.BUG => "fa-bug",
        TypeTache.TASK => "fa-tasks",
        _ => "fa-circle"
    };
}

<div class="max-w-4xl mx-auto">
    <!-- En-tête avec avertissement -->
    <div class="mb-6">
        <div class="flex items-center space-x-3 mb-2">
            <i class="fas fa-exclamation-triangle text-red-600 text-3xl"></i>
            <h2 class="text-3xl font-bold text-red-600">Supprimer la tâche</h2>
        </div>
        <p class="text-gray-600">Cette action supprimera tous les commentaires et données associées</p>
    </div>

    <!-- Bannière d'avertissement -->
    <div class="bg-red-50 border-l-4 border-red-500 p-6 rounded-lg mb-6">
        <div class="flex items-start">
            <i class="fas fa-shield-alt text-red-500 text-2xl mr-4 mt-1"></i>
            <div class="flex-1">
                <h3 class="text-red-800 font-bold text-lg mb-2">⚠️ Attention : Action irréversible</h3>
                <p class="text-red-700 mb-3">
                    Vous êtes sur le point de supprimer définitivement cette tâche. Cette action supprimera :
                </p>
                <ul class="text-red-700 space-y-1 ml-4">
                    <li class="flex items-center space-x-2">
                        <i class="fas fa-times-circle text-xs"></i>
                        <span>Tous les commentaires et discussions</span>
                    </li>
                    <li class="flex items-center space-x-2">
                        <i class="fas fa-times-circle text-xs"></i>
                        <span>Tout l'historique de modifications</span>
                    </li>
                    <li class="flex items-center space-x-2">
                        <i class="fas fa-times-circle text-xs"></i>
                        <span>Toutes les assignations et suivis</span>
                    </li>
                    <li class="flex items-center space-x-2">
                        <i class="fas fa-times-circle text-xs"></i>
                        <span>Tous les fichiers et pièces jointes liés</span>
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <!-- Carte de la tâche à supprimer -->
    <div class="bg-white rounded-xl shadow-lg overflow-hidden mb-6">
        <!-- En-tête rouge -->
        <div class="bg-gradient-to-r from-red-500 to-red-600 p-6">
            <div class="flex items-center space-x-4 text-white">
                <div class="w-16 h-16 bg-white bg-opacity-20 rounded-xl flex items-center justify-center">
                    <i class="fas @typeIcon text-2xl"></i>
                </div>
                <div>
                    <p class="text-red-100 text-sm font-medium">Tâche à supprimer</p>
                    <h3 class="text-2xl font-bold">@Model.Titre</h3>
                </div>
            </div>
        </div>

        <!-- Contenu -->
        <div class="p-6">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
                <!-- Type -->
                <div>
                    <label class="text-sm font-semibold text-gray-500 uppercase tracking-wide">Type</label>
                    <div class="mt-2 flex items-center space-x-2">
                        <i class="fas @typeIcon text-gray-400"></i>
                        <span class="text-gray-800 font-medium">@Model.Type</span>
                    </div>
                </div>

                <!-- Statut -->
                <div>
                    <label class="text-sm font-semibold text-gray-500 uppercase tracking-wide">Statut</label>
                    <div class="mt-2">
                        @switch (Model.Statut)
                        {
                            case StatutTache.A_FAIRE:
                                <span class="bg-gray-100 text-gray-800 px-3 py-1 rounded-full text-xs font-semibold inline-flex items-center">
                                    <i class="fas fa-circle mr-1"></i>À faire
                                </span>
                                break;
                            case StatutTache.EN_COURS:
                                <span class="bg-yellow-100 text-yellow-800 px-3 py-1 rounded-full text-xs font-semibold inline-flex items-center">
                                    <i class="fas fa-spinner mr-1"></i>En cours
                                </span>
                                break;
                            case StatutTache.TERMINE:
                                <span class="bg-green-100 text-green-800 px-3 py-1 rounded-full text-xs font-semibold inline-flex items-center">
                                    <i class="fas fa-check-circle mr-1"></i>Terminé
                                </span>
                                break;
                            default:
                                <span class="bg-gray-100 text-gray-800 px-3 py-1 rounded-full text-xs font-semibold">
                                    @Model.Statut
                                </span>
                                break;
                        }
                    </div>
                </div>

                <!-- Priorité -->
                <div>
                    <label class="text-sm font-semibold text-gray-500 uppercase tracking-wide">Priorité</label>
                    <div class="mt-2 flex items-center space-x-2">
                        @{
                            var priorityIcon = Model.Priorite switch
                            {
                                PrioriteTache.HAUTE => "fa-arrow-up text-red-600",
                                PrioriteTache.MOYENNE => "fa-minus text-yellow-600",
                                PrioriteTache.BASSE => "fa-arrow-down text-blue-600",
                                _ => "fa-circle text-gray-600"
                            };
                        }
                        <i class="fas @priorityIcon"></i>
                        <span class="text-gray-800 font-medium">@Model.Priorite</span>
                    </div>
                </div>

                <!-- Estimation -->
                <div>
                    <label class="text-sm font-semibold text-gray-500 uppercase tracking-wide">Estimation</label>
                    <div class="mt-2 flex items-center space-x-2">
                        <i class="fas fa-clock text-gray-400"></i>
                        <span class="text-gray-800 font-medium">@Model.EstimationDur h</span>
                    </div>
                </div>

                <!-- Projet -->
                @if (Model.Projet != null)
                {
                    <div>
                        <label class="text-sm font-semibold text-gray-500 uppercase tracking-wide">Projet</label>
                        <div class="mt-2 flex items-center space-x-2">
                            <i class="fas fa-project-diagram text-gray-400"></i>
                            <span class="text-gray-800 font-medium">@Model.Projet.Nom</span>
                        </div>
                    </div>
                }

                <!-- Sprint -->
                @if (Model.Sprint != null)
                {
                    <div>
                        <label class="text-sm font-semibold text-gray-500 uppercase tracking-wide">Sprint</label>
                        <div class="mt-2 flex items-center space-x-2">
                            <i class="fas fa-running text-gray-400"></i>
                            <span class="text-gray-800 font-medium">@Model.Sprint.Nom</span>
                        </div>
                    </div>
                }

                <!-- Assigné -->
                @if (Model.Assignee != null)
                {
                    <div>
                        <label class="text-sm font-semibold text-gray-500 uppercase tracking-wide">Assigné à</label>
                        <div class="mt-2 flex items-center space-x-2">
                            <div class="w-8 h-8 bg-teal-500 rounded-full flex items-center justify-center text-white text-xs font-semibold">
                                @Model.Assignee.Nom.Substring(0, 1).ToUpper()
                            </div>
                            <span class="text-gray-800 font-medium">@Model.Assignee.Nom</span>
                        </div>
                    </div>
                }

                <!-- Créateur -->
                @if (Model.Createur != null)
                {
                    <div>
                        <label class="text-sm font-semibold text-gray-500 uppercase tracking-wide">Créé par</label>
                        <div class="mt-2 flex items-center space-x-2">
                            <div class="w-8 h-8 bg-gray-400 rounded-full flex items-center justify-center text-white text-xs font-semibold">
                                @Model.Createur.Nom.Substring(0, 1).ToUpper()
                            </div>
                            <span class="text-gray-800 font-medium">@Model.Createur.Nom</span>
                        </div>
                    </div>
                }
            </div>

            @if (!string.IsNullOrEmpty(Model.Description))
            {
                <div class="pt-4 border-t border-gray-200">
                    <label class="text-sm font-semibold text-gray-500 uppercase tracking-wide">Description</label>
                    <p class="text-gray-700 mt-2 whitespace-pre-wrap">@Model.Description</p>
                </div>
            }
        </div>
    </div>

    <!-- Formulaire de confirmation -->
    <div class="bg-white rounded-xl shadow-lg p-8">
        <h3 class="text-xl font-bold text-gray-800 mb-4 flex items-center">
            <i class="fas fa-check-circle text-gray-600 mr-2"></i>
            Confirmation requise
        </h3>
        <p class="text-gray-600 mb-6">
            Pour confirmer la suppression, tapez le titre de la tâche ci-dessous :
        </p>

        <!-- Champ de confirmation -->
        <div class="mb-6">
            <label class="block text-sm font-semibold text-gray-700 mb-2">
                Tapez "<span class="text-red-600 font-bold">@Model.Titre</span>" pour confirmer
            </label>
            <input type="text"
                   id="confirmTitle"
                   class="w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:outline-none focus:border-red-500 focus:ring-2 focus:ring-red-200 transition duration-200"
                   placeholder="Titre de la tâche" />
        </div>

        <form asp-action="Delete" method="post" id="deleteForm">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="TacheID" />

            <div class="flex gap-3">
                <button type="submit"
                        id="deleteButton"
                        disabled
                        class="flex-1 bg-red-600 text-white font-semibold px-6 py-3 rounded-lg hover:bg-red-700 transition duration-200 shadow-lg disabled:bg-gray-300 disabled:cursor-not-allowed disabled:hover:bg-gray-300 flex items-center justify-center space-x-2">
                    <i class="fas fa-trash-alt"></i>
                    <span>Supprimer définitivement</span>
                </button>
                <a asp-action="Index"
                   class="flex-1 bg-gray-200 text-gray-700 font-semibold px-6 py-3 rounded-lg hover:bg-gray-300 transition duration-200 flex items-center justify-center space-x-2">
                    <i class="fas fa-times"></i>
                    <span>Annuler</span>
                </a>
            </div>
        </form>
    </div>

    <!-- Information supplémentaire -->
    <div class="bg-blue-50 rounded-xl p-4 mt-6 border border-blue-200">
        <div class="flex items-start space-x-3">
            <i class="fas fa-info-circle text-blue-600 text-lg mt-0.5"></i>
            <div class="text-sm text-blue-800">
                <p class="font-semibold mb-1">Alternative</p>
                <p>Si vous souhaitez simplement marquer cette tâche comme terminée au lieu de la supprimer, modifiez son statut depuis la liste des tâches.</p>
            </div>
        </div>
    </div>
</div>

<script>
    // Validation du titre pour activer le bouton de suppression
    const confirmInput = document.getElementById('confirmTitle');
    const deleteButton = document.getElementById('deleteButton');
    const expectedTitle = '@Model.Titre';

    confirmInput.addEventListener('input', function() {
        if (this.value === expectedTitle) {
            deleteButton.disabled = false;
            deleteButton.classList.remove('disabled:bg-gray-300', 'disabled:cursor-not-allowed');
        } else {
            deleteButton.disabled = true;
            deleteButton.classList.add('disabled:bg-gray-300', 'disabled:cursor-not-allowed');
        }
    });
</script>