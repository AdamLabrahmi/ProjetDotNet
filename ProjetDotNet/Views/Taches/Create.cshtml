@model ProjetDotNet.Models.Tache
@using ProjetDotNet.Models.Enums
@{
    ViewBag.Title = "Créer une tâche";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="max-w-3xl mx-auto">
    <h1 class="text-2xl font-bold mb-4">Créer une tâche</h1>

    <form asp-action="Create" method="post" class="bg-white p-6 rounded-xl shadow">
        <div asp-validation-summary="All" class="text-red-600 font-bold"></div>

        @Html.AntiForgeryToken()
        <div asp-validation-summary="ModelOnly" class="text-sm text-red-600 mb-4"></div>

        <div class="mb-4">
            <label asp-for="Titre" class="block text-sm font-medium text-gray-700">Titre</label>
            <input asp-for="Titre" class="mt-1 block w-full border rounded px-3 py-2" />
            <span asp-validation-for="Titre" class="text-sm text-red-600"></span>
        </div>

        <div class="mb-4">
            <label asp-for="Description" class="block text-sm font-medium text-gray-700">Description</label>
            <textarea asp-for="Description" class="mt-1 block w-full border rounded px-3 py-2" rows="4"></textarea>
            <span asp-validation-for="Description" class="text-sm text-red-600"></span>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-4">
            <div>
                <label asp-for="Type" class="block text-sm font-medium text-gray-700">Type</label>
                <select asp-for="Type" class="mt-1 block w-full border rounded px-3 py-2"
                        asp-items="ViewBag.Types">
                </select>
                <span asp-validation-for="Type" class="text-sm text-red-600"></span>
            </div>

            <div>
                <label asp-for="Priorite" class="block text-sm font-medium text-gray-700">Priorité</label>
                <select asp-for="Priorite" class="mt-1 block w-full border rounded px-3 py-2"
                        asp-items="ViewBag.Priorites">
                </select>
                <span asp-validation-for="Priorite" class="text-sm text-red-600"></span>
            </div>

            <div>
                <label asp-for="Statut" class="block text-sm font-medium text-gray-700">Statut</label>
                <select asp-for="Statut" class="mt-1 block w-full border rounded px-3 py-2"
                        asp-items="ViewBag.Statuts">
                </select>
                <span asp-validation-for="Statut" class="text-sm text-red-600"></span>
            </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-4">
            <div>
                <label asp-for="EstimationDur" class="block text-sm font-medium text-gray-700">Estimation (h)</label>
                <input asp-for="EstimationDur" type="number" step="0.1" class="mt-1 block w-full border rounded px-3 py-2" />
                <span asp-validation-for="EstimationDur" class="text-sm text-red-600"></span>
            </div>

            <div>
                <label asp-for="TempsRestant" class="block text-sm font-medium text-gray-700">Temps restant (h)</label>
                <input asp-for="TempsRestant" type="number" step="0.1" class="mt-1 block w-full border rounded px-3 py-2" />
                <span asp-validation-for="TempsRestant" class="text-sm text-red-600"></span>
            </div>

            <div class="mb-4">
                <label asp-for="ProjectID">Projet</label>
                <select asp-for="ProjectID"
                        id="ProjectSelect"
                        asp-items="ViewBag.Projets"
                        class="w-full border px-3 py-2">
                    <option value="">-- Choisir un projet --</option>
                </select>
            </div>
        </div>

        <!-- Affichage immédiat de Sprint + Equipe + Assignee -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-4">
            <div class="mb-4">
                <label>Sprint</label>
                <select asp-for="SprintID"
                        id="SprintSelect"
                        class="w-full border px-3 py-2"
                        disabled>
                    <option value="">-- Choisir un projet d'abord --</option>
                </select>
            </div>

            <div class="mb-4">
                <label>Équipe</label>
                <select id="EquipeSelect"
                        class="w-full border px-3 py-2"
                        disabled>
                    <option value="">-- Choisir un projet d'abord --</option>
                </select>
            </div>

            <div class="mb-4">
                <label asp-for="AssigneeID">Assigné</label>
                <select asp-for="AssigneeID"
                        id="AssigneeSelect"
                        class="w-full border px-3 py-2"
                        disabled>
                    <option value="">-- Choisir une équipe d'abord --</option>
                </select>
            </div>
        </div>

        <!-- autres champs (Sprint déjà présent, placeholder retiré) -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
            <div>
                <!-- placeholder alignement si besoin -->
            </div>
        </div>

        <!-- CreateurID rendu hidden et pré-rempli dans le contrôleur -->
        <input asp-for="CreateurID" type="hidden" />

        <input asp-for="DateCreation" type="hidden" value="@DateTime.Now.ToString("o")" />

        <div class="flex justify-end space-x-2">
            <a asp-action="Index" class="px-4 py-2 rounded border">Annuler</a>
            <button type="submit" class="px-4 py-2 rounded bg-teal-600 text-white">Créer</button>
        </div>
    </form>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")

    <script>
        const projectSelect = document.getElementById("ProjectSelect");
        const sprintSelect = document.getElementById("SprintSelect");
        const equipeSelect = document.getElementById("EquipeSelect");
        const assigneeSelect = document.getElementById("AssigneeSelect");

        function resetSelect(select, text, disabled = true) {
            select.innerHTML = `<option value="">${text}</option>`;
            select.disabled = disabled;
        }

        projectSelect.addEventListener("change", async function () {
            const projectId = this.value;

            resetSelect(sprintSelect, "-- Chargement des sprints --");
            resetSelect(equipeSelect, "-- Chargement des équipes --");
            resetSelect(assigneeSelect, "-- Choisir une équipe d'abord --");

            if (!projectId) {
                resetSelect(sprintSelect, "-- Choisir un projet d'abord --");
                resetSelect(equipeSelect, "-- Choisir un projet d'abord --");
                return;
            }

            // === Charger Sprints ===
            const sprintRes = await fetch(`/Taches/GetSprintsByProject?projectId=${projectId}`);
            const sprints = await sprintRes.json();
            sprintSelect.innerHTML = `<option value="">-- Aucun --</option>`;
            sprints.forEach(s => {
                sprintSelect.innerHTML += `<option value="${s.sprintID}">${s.nom}</option>`;
            });
            sprintSelect.disabled = false;

            // === Charger Equipes ===
            const equipeRes = await fetch(`/Taches/GetEquipesByProjet?projectId=${projectId}`);
            const equipes = await equipeRes.json();
            equipeSelect.innerHTML = `<option value="">-- Choisir une équipe --</option>`;
            equipes.forEach(e => {
                equipeSelect.innerHTML += `<option value="${e.teamID}">${e.nom}</option>`;
            });
            equipeSelect.disabled = false;
        });

        equipeSelect.addEventListener("change", async function () {
            const equipeId = this.value;

            resetSelect(assigneeSelect, "-- Chargement des membres --");

            if (!equipeId) {
                resetSelect(assigneeSelect, "-- Choisir une équipe d'abord --");
                return;
            }

            // Demander la liste sans ScrumMaster ni ProductOwner
            const res = await fetch(`/Taches/GetMembresByEquipe?equipeId=${equipeId}&excludeLeads=true`);
            const membres = await res.json();

            assigneeSelect.innerHTML = `<option value="">-- Aucun --</option>`;
            membres.forEach(m => {
                assigneeSelect.innerHTML += `<option value="${m.userID}">${m.nom}</option>`;
            });

            assigneeSelect.disabled = false;
        });
    </script>

}