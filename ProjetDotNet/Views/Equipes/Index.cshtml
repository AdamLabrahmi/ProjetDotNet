@{
    ViewBag.Title = "Équipe";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="p-6">
    <div class="flex items-center justify-between mb-6">
        <h1 class="text-2xl font-bold text-gray-800">Équipe</h1>
        <a asp-controller="Team" asp-action="Create" class="bg-teal-600 text-white px-4 py-2 rounded-lg hover:bg-teal-700">+ Ajouter un membre</a>
    </div>

    <div class="grid gap-4">
        @* Exemple de carte membre *@
        <div class="p-4 bg-white rounded-lg shadow flex items-center justify-between">
            <div class="flex items-center space-x-4">
                <div class="w-12 h-12 bg-teal-50 rounded-full flex items-center justify-center text-teal-600 font-semibold">A</div>
                <div>
                    <p class="font-semibold">Alice Dupont</p>
                    <p class="text-sm text-gray-500">Chef de projet</p>
                </div>
            </div>
            <div class="text-sm text-gray-600">
                <a asp-controller="Team" asp-action="Edit" asp-route-id="1" class="mr-3 hover:underline">Éditer</a>
                <a asp-controller="Team" asp-action="Details" asp-route-id="1" class="hover:underline">Profil</a>
            </div>
        </div>
    </div>
</div>