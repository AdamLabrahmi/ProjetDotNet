@model IEnumerable<ProjetDotNet.Models.Equipe>
@{
    ViewBag.Title = "Équipes";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
    int? orgId = ViewBag.OrgID != null ? (int?)ViewBag.OrgID : null;

    // palette pour les fonds d'initiales
    var colorClasses = new[] { "bg-teal-500", "bg-emerald-500", "bg-cyan-500", "bg-amber-500", "bg-purple-500" };
}

<!-- En-tête avec bouton d'action -->
<div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-6 gap-4">
    <div>
        <h1 class="text-3xl font-bold text-gray-800 mb-2">Équipes</h1>
        <p class="text-gray-600">Gérez vos équipes et leurs membres</p>
    </div>
    <a asp-controller="Equipes" asp-action="Create" asp-route-orgId="@orgId"
       class="bg-gradient-to-r from-teal-600 to-emerald-600 text-white px-6 py-3 rounded-lg hover:from-teal-700 hover:to-emerald-700 transition shadow-lg flex items-center space-x-2">
        <i class="fas fa-plus"></i>
        <span class="font-semibold">Nouvelle équipe</span>
    </a>
</div>

<!-- Statistiques rapides -->
<div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-6">
    <div class="bg-white rounded-xl shadow-md p-6 border-l-4 border-teal-500">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-sm text-gray-600 font-medium">Total équipes</p>
                <h3 class="text-3xl font-bold text-gray-800 mt-2">@(Model?.Count() ?? 0)</h3>
            </div>
            <div class="w-14 h-14 bg-teal-100 rounded-full flex items-center justify-center">
                <i class="fas fa-users text-teal-600 text-2xl"></i>
            </div>
        </div>
    </div>

    <div class="bg-white rounded-xl shadow-md p-6 border-l-4 border-emerald-500">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-sm text-gray-600 font-medium">Membres actifs</p>
                <h3 class="text-3xl font-bold text-gray-800 mt-2">-</h3>
            </div>
            <div class="w-14 h-14 bg-emerald-100 rounded-full flex items-center justify-center">
                <i class="fas fa-user-check text-emerald-600 text-2xl"></i>
            </div>
        </div>
    </div>

    <div class="bg-white rounded-xl shadow-md p-6 border-l-4 border-cyan-500">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-sm text-gray-600 font-medium">Projets en cours</p>
                <h3 class="text-3xl font-bold text-gray-800 mt-2">-</h3>
            </div>
            <div class="w-14 h-14 bg-cyan-100 rounded-full flex items-center justify-center">
                <i class="fas fa-project-diagram text-cyan-600 text-2xl"></i>
            </div>
        </div>
    </div>
</div>

<!-- Barre de recherche et filtres -->
<div class="bg-white rounded-xl shadow-md p-4 mb-6">
    <div class="flex flex-col md:flex-row gap-4">
        <div class="flex-1">
            <div class="relative">
                <i class="fas fa-search absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400"></i>
                <input type="text"
                       placeholder="Rechercher une équipe..."
                       class="w-full pl-10 pr-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-teal-500 focus:border-transparent" />
            </div>
        </div>
        <div class="flex gap-2">
            <button class="px-4 py-2 border border-gray-300 rounded-lg hover:bg-gray-50 transition flex items-center space-x-2">
                <i class="fas fa-filter text-gray-600"></i>
                <span class="text-gray-700">Filtrer</span>
            </button>
            <button class="px-4 py-2 border border-gray-300 rounded-lg hover:bg-gray-50 transition flex items-center space-x-2">
                <i class="fas fa-sort text-gray-600"></i>
                <span class="text-gray-700">Trier</span>
            </button>
        </div>
    </div>
</div>

@if (Model != null && Model.Any())
{
    <!-- Tableau des équipes -->
    <div class="bg-white rounded-xl shadow-md overflow-hidden">
        <div class="overflow-x-auto">
            <table class="w-full">
                <thead>
                    <tr class="bg-gray-50 border-b border-gray-200">
                        <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                            <i class="fas fa-users text-teal-600 mr-2"></i>Nom
                        </th>
                        <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                            <i class="fas fa-align-left text-teal-600 mr-2"></i>Description
                        </th>
                        <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                            <i class="fas fa-user text-teal-600 mr-2"></i>Membres
                        </th>
                        <th class="px-6 py-4 text-right text-xs font-semibold text-gray-600 uppercase tracking-wider">
                            <i class="fas fa-cog text-teal-600 mr-2"></i>Actions
                        </th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-200">
                    @foreach (var e in Model)
                    {
                        <tr class="hover:bg-gray-50 transition">
                            <td class="px-6 py-4">
                                <div class="flex items-center space-x-3">
                                    <div class="w-10 h-10 bg-gradient-to-br from-teal-500 to-emerald-500 rounded-lg flex items-center justify-center">
                                        <span class="text-white font-bold">@(!string.IsNullOrEmpty(e.Nom) ? e.Nom.Substring(0,1).ToUpper() : "?")</span>
                                    </div>
                                    <div>
                                        <p class="font-semibold text-gray-800">@e.Nom</p>
                                        <p class="text-xs text-gray-500">ID: @e.TeamID</p>
                                    </div>
                                </div>
                            </td>
                            <td class="px-6 py-4">
                                @if (!string.IsNullOrEmpty(e.Description))
                                {
                                    <p class="text-gray-600 line-clamp-2">@e.Description</p>
                                }
                                else
                                {
                                    <p class="text-gray-400 italic text-sm">Aucune description</p>
                                }
                            </td>
                            <td class="px-6 py-4">
                                @{
                                    // prendre au plus 3 membres affichables (ayant Utilisateur non null)
                                    var members = e.Membres?.Where(m => m.Utilisateur != null).ToList() ?? new List<ProjetDotNet.Models.MembreEquipe>();
                                    var display = members.Take(3).ToList();
                                    var totalMembers = members.Count;
                                    var extra = totalMembers - display.Count;
                                }
                                <div class="flex items-center space-x-3">
                                    <div class="flex -space-x-2">
                                        @foreach (var m in display)
                                        {
                                            var name = m.Utilisateur?.Nom ?? m.Utilisateur?.Email ?? "?";
                                            var initial = !string.IsNullOrEmpty(name) ? name.Substring(0,1).ToUpper() : "?";
                                            var color = colorClasses[(m.UserID.GetHashCode() & int.MaxValue) % colorClasses.Length];
                                            <div class="w-8 h-8 @color rounded-full border-2 border-white flex items-center justify-center">
                                                <span class="text-white text-xs font-semibold">@initial</span>
                                            </div>
                                        }
                                    </div>

                                    @if (extra > 0)
                                    {
                                        <span class="text-sm text-gray-500">+@extra</span>
                                    }
                                </div>
                            </td>
                            <td class="px-6 py-4">
                                <div class="flex items-center justify-end space-x-2">
                                    <a asp-controller="MembreEquipe"
                                       asp-action="Add"
                                       asp-route-teamId="@e.TeamID"
                                       class="p-2 bg-teal-600 text-white rounded hover:bg-teal-700"
                                       title="Ajouter un membre">
                                        <i class="fas fa-user-plus"></i>
                                    </a>

                                    <a asp-action="Details" asp-route-id="@e.TeamID"
                                       class="text-gray-600 hover:text-teal-600 transition p-2 rounded-lg hover:bg-teal-50"
                                       title="Voir les détails">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@e.TeamID"
                                       class="text-teal-600 hover:text-teal-700 transition p-2 rounded-lg hover:bg-teal-50"
                                       title="Modifier">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@e.TeamID"
                                       class="text-red-600 hover:text-red-700 transition p-2 rounded-lg hover:bg-red-50"
                                       title="Supprimer">
                                        <i class="fas fa-trash-alt"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
else
{
    <!-- État vide -->
    <div class="bg-white rounded-xl shadow-md p-12 text-center">
        <div class="w-24 h-24 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-6">
            <i class="fas fa-users text-gray-400 text-4xl"></i>
        </div>
        <h3 class="text-2xl font-bold text-gray-800 mb-2">Aucune équipe</h3>
        <p class="text-gray-600 mb-6">Commencez par créer votre première équipe</p>
        <a asp-controller="Equipes" asp-action="Create" asp-route-orgId="@orgId"
           class="inline-flex items-center space-x-2 bg-gradient-to-r from-teal-600 to-emerald-600 text-white px-8 py-3 rounded-lg hover:from-teal-700 hover:to-emerald-700 transition shadow-lg">
            <i class="fas fa-plus"></i>
            <span class="font-semibold">Créer une équipe</span>
        </a>
    </div>
}

<!-- Lien de retour si on vient d'une organisation -->
@if (orgId.HasValue)
{
    <div class="mt-6 bg-blue-50 rounded-xl p-4 border border-blue-200">
        <div class="flex items-center justify-between">
            <div class="flex items-center space-x-3">
                <i class="fas fa-info-circle text-blue-600"></i>
                <span class="text-sm text-blue-800">Vous consultez les équipes d'une organisation spécifique</span>
            </div>
            <a asp-controller="Organisations" asp-action="Edit" asp-route-id="@orgId.Value"
               class="text-sm text-blue-600 hover:text-blue-700 font-semibold hover:underline flex items-center space-x-1">
                <i class="fas fa-arrow-left"></i>
                <span>Revenir à l'organisation</span>
            </a>
        </div>
    </div>
}