@model ProjetDotNet.Models.Equipe
@{
    ViewBag.Title = "Supprimer l'équipe";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="max-w-4xl mx-auto">
    <!-- En-tête avec avertissement -->
    <div class="mb-6">
        <div class="flex items-center space-x-3 mb-2">
            <i class="fas fa-exclamation-triangle text-red-600 text-3xl"></i>
            <h2 class="text-3xl font-bold text-red-600">Supprimer l'équipe</h2>
        </div>
        <p class="text-gray-600">Cette action retirera tous les membres et désassociera les projets liés</p>
    </div>

    <!-- Bannière d'avertissement -->
    <div class="bg-red-50 border-l-4 border-red-500 p-6 rounded-lg mb-6">
        <div class="flex items-start">
            <i class="fas fa-shield-alt text-red-500 text-2xl mr-4 mt-1"></i>
            <div class="flex-1">
                <h3 class="text-red-800 font-bold text-lg mb-2">⚠️ Attention : Action de suppression</h3>
                <p class="text-red-700 mb-3">
                    Vous êtes sur le point de supprimer définitivement cette équipe. Cette action :
                </p>
                <ul class="text-red-700 space-y-1 ml-4">
                    <li class="flex items-center space-x-2">
                        <i class="fas fa-times-circle text-xs"></i>
                        <span>Retirera tous les membres de l'équipe</span>
                    </li>
                    <li class="flex items-center space-x-2">
                        <i class="fas fa-times-circle text-xs"></i>
                        <span>Désassociera les projets liés à cette équipe</span>
                    </li>
                    <li class="flex items-center space-x-2">
                        <i class="fas fa-times-circle text-xs"></i>
                        <span>Supprimera toutes les données associées</span>
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <!-- Carte de l'équipe à supprimer -->
    <div class="bg-white rounded-xl shadow-lg overflow-hidden mb-6">
        <!-- En-tête rouge -->
        <div class="bg-gradient-to-r from-red-500 to-red-600 p-6">
            <div class="flex items-center space-x-4 text-white">
                <div class="w-16 h-16 bg-white bg-opacity-20 rounded-xl flex items-center justify-center">
                    <i class="fas fa-users text-3xl"></i>
                </div>
                <div>
                    <p class="text-red-100 text-sm font-medium">Équipe à supprimer</p>
                    <h3 class="text-2xl font-bold">@Model.Nom</h3>
                </div>
            </div>
        </div>

        <!-- Contenu -->
        <div class="p-6">
            @if (!string.IsNullOrEmpty(Model.Description))
            {
                <div class="mb-4">
                    <label class="text-sm font-semibold text-gray-500 uppercase tracking-wide">Description</label>
                    <p class="text-gray-700 mt-1">@Model.Description</p>
                </div>
            }
            else
            {
                <div class="mb-4">
                    <label class="text-sm font-semibold text-gray-500 uppercase tracking-wide">Description</label>
                    <p class="text-gray-400 italic mt-1">Aucune description</p>
                </div>
            }

            @* <div class="grid grid-cols-2 gap-4 pt-4 border-t border-gray-200">
                <div>
                    <label class="text-sm font-semibold text-gray-500 uppercase tracking-wide">ID Équipe</label>
                    <p class="text-gray-800 font-medium">@Model.TeamID</p>
                </div>
                <div>
                    <label class="text-sm font-semibold text-gray-500 uppercase tracking-wide">Organisation</label>
                    <p class="text-gray-800 font-medium">ID: @Model.OrgID</p>
                </div>
            </div> *@
        </div>
    </div>

    <!-- Formulaire de confirmation -->
    <div class="bg-white rounded-xl shadow-lg p-8">
        <h3 class="text-xl font-bold text-gray-800 mb-4 flex items-center">
            <i class="fas fa-check-circle text-gray-600 mr-2"></i>
            Confirmation requise
        </h3>
        <p class="text-gray-600 mb-6">
            Pour confirmer la suppression, tapez le nom de l'équipe ci-dessous :
        </p>

        <!-- Champ de confirmation -->
        <div class="mb-6">
            <label class="block text-sm font-semibold text-gray-700 mb-2">
                Tapez "<span class="text-red-600 font-bold">@Model.Nom</span>" pour confirmer
            </label>
            <input type="text"
                   id="confirmName"
                   class="w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:outline-none focus:border-red-500 focus:ring-2 focus:ring-red-200 transition duration-200"
                   placeholder="Nom de l'équipe" />
        </div>

        <form asp-controller="Equipes" asp-action="Delete" asp-route-id="@Model.TeamID" method="post" id="deleteForm">
            @Html.AntiForgeryToken()

            <div class="flex gap-3">
                <button type="submit"
                        id="deleteButton"
                        disabled
                        class="flex-1 bg-red-600 text-white font-semibold px-6 py-3 rounded-lg hover:bg-red-700 transition duration-200 shadow-lg disabled:opacity-50 disabled:cursor-not-allowed flex items-center justify-center space-x-2">
                    <i class="fas fa-trash-alt"></i>
                    <span>Supprimer définitivement</span>
                </button>
                <a asp-action="Index" asp-route-orgId="@Model.OrgID"
                   class="flex-1 bg-gray-200 text-gray-700 font-semibold px-6 py-3 rounded-lg hover:bg-gray-300 transition duration-200 flex items-center justify-center space-x-2">
                    <i class="fas fa-times"></i>
                    <span>Annuler</span>
                </a>
            </div>
        </form>
    </div>

    <!-- Information supplémentaire -->
    <div class="bg-blue-50 rounded-xl p-4 mt-6 border border-blue-200">
        <div class="flex items-start space-x-3">
            <i class="fas fa-info-circle text-blue-600 text-lg mt-0.5"></i>
            <div class="text-sm text-blue-800">
                <p class="font-semibold mb-1">Alternative</p>
                <p>Si vous souhaitez simplement désactiver temporairement cette équipe, contactez l'administrateur.</p>
            </div>
        </div>
    </div>
</div>

<script>
    (function () {
        const confirmInput = document.getElementById('confirmName');
        const deleteButton = document.getElementById('deleteButton');

        // Sérialisation JSON pour échapper correctement le nom côté serveur
        const expectedName = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.Nom ?? ""));

        function normalize(s) {
            return (s || "").trim().toLowerCase();
        }

        function validateInput() {
            const val = normalize(confirmInput.value);
            const exp = normalize(expectedName);

            if (val === exp && exp !== "") {
                deleteButton.disabled = false;
                deleteButton.classList.remove('disabled:opacity-50', 'disabled:cursor-not-allowed');
                deleteButton.classList.remove('opacity-50');
            } else {
                deleteButton.disabled = true;
                deleteButton.classList.add('opacity-50');
            }
        }

        if (confirmInput) {
            confirmInput.addEventListener('input', validateInput);
            confirmInput.addEventListener('change', validateInput);
            confirmInput.addEventListener('paste', function () { setTimeout(validateInput, 10); });
            confirmInput.addEventListener('keyup', validateInput);
            // validate once in case browser autofill
            setTimeout(validateInput, 50);
        }
    })();
</script>