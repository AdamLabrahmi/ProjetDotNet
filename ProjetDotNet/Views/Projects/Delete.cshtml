@model ProjetDotNet.Models.Projet
@using ProjetDotNet.Models.Enums
@{
    ViewBag.Title = "Supprimer le projet";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="max-w-4xl mx-auto">
    <!-- En-tête avec avertissement -->
    <div class="mb-6">
        <div class="flex items-center space-x-3 mb-2">
            <i class="fas fa-exclamation-triangle text-red-600 text-3xl"></i>
            <h2 class="text-3xl font-bold text-red-600">Supprimer le projet</h2>
        </div>
        <p class="text-gray-600">Cette action supprimera toutes les tâches, sprints et données associées</p>
    </div>

    <!-- Bannière d'avertissement -->
    <div class="bg-red-50 border-l-4 border-red-500 p-6 rounded-lg mb-6">
        <div class="flex items-start">
            <i class="fas fa-shield-alt text-red-500 text-2xl mr-4 mt-1"></i>
            <div class="flex-1">
                <h3 class="text-red-800 font-bold text-lg mb-2">⚠️ Attention : Action irréversible</h3>
                <p class="text-red-700 mb-3">
                    Vous êtes sur le point de supprimer définitivement ce projet. Cette action supprimera :
                </p>
                <ul class="text-red-700 space-y-1 ml-4">
                    <li class="flex items-center space-x-2">
                        <i class="fas fa-times-circle text-xs"></i>
                        <span>Toutes les tâches et sous-tâches</span>
                    </li>
                    <li class="flex items-center space-x-2">
                        <i class="fas fa-times-circle text-xs"></i>
                        <span>Tous les sprints et planifications</span>
                    </li>
                    <li class="flex items-center space-x-2">
                        <i class="fas fa-times-circle text-xs"></i>
                        <span>Toutes les assignations de membres</span>
                    </li>
                    <li class="flex items-center space-x-2">
                        <i class="fas fa-times-circle text-xs"></i>
                        <span>Tous les fichiers et commentaires liés</span>
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <!-- Carte du projet à supprimer -->
    <div class="bg-white rounded-xl shadow-lg overflow-hidden mb-6">
        <!-- En-tête rouge -->
        <div class="bg-gradient-to-r from-red-500 to-red-600 p-6">
            <div class="flex items-center space-x-4 text-white">
                <div class="w-16 h-16 bg-white bg-opacity-20 rounded-xl flex items-center justify-center">
                    <span class="text-2xl font-bold">@(Model.CleProjet ?? "P")</span>
                </div>
                <div>
                    <p class="text-red-100 text-sm font-medium">Projet à supprimer</p>
                    <h3 class="text-2xl font-bold">@Model.Nom</h3>
                </div>
            </div>
        </div>

        <!-- Contenu -->
        <div class="p-6">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
                <!-- Clé du projet -->
                <div>
                    <label class="text-sm font-semibold text-gray-500 uppercase tracking-wide">Clé du projet</label>
                    <div class="mt-2">
                        <span class="bg-gray-100 text-gray-800 px-4 py-2 rounded-lg font-mono text-lg font-bold inline-block">
                            @(Model.CleProjet ?? "-")
                        </span>
                    </div>
                </div>

                <!-- Organisation -->
                <div>
                    <label class="text-sm font-semibold text-gray-500 uppercase tracking-wide">Organisation</label>
                    <div class="mt-2 flex items-center space-x-2">
                        @if (Model.Organisation != null)
                        {
                            <i class="fas fa-building text-gray-400"></i>
                            <span class="text-gray-800 font-medium">@Model.Organisation.Nom</span>
                        }
                        else
                        {
                            <span class="text-gray-400 italic">Non assigné</span>
                        }
                    </div>
                </div>

                <!-- Statut -->
                <div>
                    <label class="text-sm font-semibold text-gray-500 uppercase tracking-wide">Statut</label>
                    <div class="mt-2">
                        @switch (Model.Statut)
                        {
                            case StatutProjet.EN_COURS:
                                <span class="bg-yellow-100 text-yellow-800 px-3 py-1 rounded-full text-xs font-semibold inline-flex items-center">
                                    <i class="fas fa-spinner mr-1"></i>En cours
                                </span>
                                break;
                            case StatutProjet.TERMINE:
                                <span class="bg-green-100 text-green-800 px-3 py-1 rounded-full text-xs font-semibold inline-flex items-center">
                                    <i class="fas fa-check-circle mr-1"></i>Terminé
                                </span>
                                break;
                            case StatutProjet.EN_ATTENTE:
                                <span class="bg-gray-100 text-gray-800 px-3 py-1 rounded-full text-xs font-semibold inline-flex items-center">
                                    <i class="fas fa-clock mr-1"></i>En attente
                                </span>
                                break;
                            default:
                                <span class="bg-blue-100 text-blue-800 px-3 py-1 rounded-full text-xs font-semibold">
                                    @Model.Statut
                                </span>
                                break;
                        }
                    </div>
                </div>

                <!-- ID -->
                <div>
                    <label class="text-sm font-semibold text-gray-500 uppercase tracking-wide">ID</label>
                    <p class="text-gray-800 font-medium mt-2">@Model.ProjectID</p>
                </div>
            </div>

            @if (!string.IsNullOrEmpty(Model.Description))
            {
                <div class="pt-4 border-t border-gray-200">
                    <label class="text-sm font-semibold text-gray-500 uppercase tracking-wide">Description</label>
                    <p class="text-gray-700 mt-2">@Model.Description</p>
                </div>
            }
        </div>
    </div>

    <!-- Formulaire de confirmation -->
    <div class="bg-white rounded-xl shadow-lg p-8">
        <h3 class="text-xl font-bold text-gray-800 mb-4 flex items-center">
            <i class="fas fa-check-circle text-gray-600 mr-2"></i>
            Confirmation requise
        </h3>
        <p class="text-gray-600 mb-6">
            Pour confirmer la suppression, tapez le nom du projet ci-dessous :
        </p>

        <!-- Champ de confirmation -->
        <div class="mb-6">
            <label class="block text-sm font-semibold text-gray-700 mb-2">
                Tapez "<span class="text-red-600 font-bold">@Model.Nom</span>" pour confirmer
            </label>
            <input type="text"
                   id="confirmName"
                   class="w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:outline-none focus:border-red-500 focus:ring-2 focus:ring-red-200 transition duration-200"
                   placeholder="Nom du projet" />
        </div>

        <form asp-action="Delete" method="post" id="deleteForm">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="ProjectID" />

            <div class="flex gap-3">
                <button type="submit"
                        id="deleteButton"
                        disabled
                        class="flex-1 bg-red-600 text-white font-semibold px-6 py-3 rounded-lg hover:bg-red-700 transition duration-200 shadow-lg disabled:bg-gray-300 disabled:cursor-not-allowed disabled:hover:bg-gray-300 flex items-center justify-center space-x-2">
                    <i class="fas fa-trash-alt"></i>
                    <span>Supprimer définitivement</span>
                </button>
                <a asp-action="Index"
                   class="flex-1 bg-gray-200 text-gray-700 font-semibold px-6 py-3 rounded-lg hover:bg-gray-300 transition duration-200 flex items-center justify-center space-x-2">
                    <i class="fas fa-times"></i>
                    <span>Annuler</span>
                </a>
            </div>
        </form>
    </div>

    <!-- Information supplémentaire -->
    <div class="bg-blue-50 rounded-xl p-4 mt-6 border border-blue-200">
        <div class="flex items-start space-x-3">
            <i class="fas fa-info-circle text-blue-600 text-lg mt-0.5"></i>
            <div class="text-sm text-blue-800">
                <p class="font-semibold mb-1">Alternative</p>
                <p>Si vous souhaitez simplement archiver ce projet au lieu de le supprimer, modifiez son statut ou contactez l'administrateur.</p>
            </div>
        </div>
    </div>
</div>

<script>
    // Validation du nom pour activer le bouton de suppression
    const confirmInput = document.getElementById('confirmName');
    const deleteButton = document.getElementById('deleteButton');
    const expectedName = '@Model.Nom';

    confirmInput.addEventListener('input', function() {
        if (this.value === expectedName) {
            deleteButton.disabled = false;
            deleteButton.classList.remove('disabled:bg-gray-300', 'disabled:cursor-not-allowed');
        } else {
            deleteButton.disabled = true;
            deleteButton.classList.add('disabled:bg-gray-300', 'disabled:cursor-not-allowed');
        }
    });
</script>