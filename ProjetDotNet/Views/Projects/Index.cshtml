@if (Model != null && Model.Any())
{
    <!-- Tableau des projets -->
    <div class="bg-white rounded-xl shadow-md overflow-hidden">
        <div class="overflow-x-auto">
            <table class="w-full">
                <thead>
                    <tr class="bg-gray-50 border-b border-gray-200">
                        <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                            <i class="fas fa-project-diagram text-teal-600 mr-2"></i>Nom
                        </th>
                        <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                            <i class="fas fa-key text-teal-600 mr-2"></i>Clé
                        </th>
                        <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                            <i class="fas fa-building text-teal-600 mr-2"></i>Organisation
                        </th>
                        <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                            <i class="fas fa-info-circle text-teal-600 mr-2"></i>Statut
                        </th>
                        <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                            <i class="fas fa-user-friends text-teal-600 mr-2"></i>Membres
                        </th>
                        <th class="px-6 py-4 text-right text-xs font-semibold text-gray-600 uppercase tracking-wider">
                            <i class="fas fa-cog text-teal-600 mr-2"></i>Actions
                        </th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-200">
                    @foreach (var p in Model)
                    {
                        <tr class="hover:bg-gray-50 transition">
                            <td class="px-6 py-4">
                                <div class="flex items-center space-x-3">
                                    <div class="w-10 h-10 bg-gradient-to-br from-teal-500 to-emerald-500 rounded-lg flex items-center justify-center">
                                        <span class="text-white font-bold text-sm">@(p.CleProjet ?? "P")</span>
                                    </div>
                                    <div>
                                        <p class="font-semibold text-gray-800">@p.Nom</p>
                                        <p class="text-xs text-gray-500">ID: @p.ProjectID</p>
                                    </div>
                                </div>
                            </td>
                            <td class="px-6 py-4">
                                <span class="bg-gray-100 text-gray-700 px-3 py-1 rounded-lg text-sm font-mono">
                                    @(p.CleProjet ?? "-")
                                </span>
                            </td>
                            <td class="px-6 py-4">
                                @if (p.Organisation != null)
                                {
                                    <div class="flex items-center space-x-2">
                                        <i class="fas fa-building text-gray-400"></i>
                                        <span class="text-gray-700">@p.Organisation.Nom</span>
                                    </div>
                                }
                                else
                                {
                                    <span class="text-gray-400 italic text-sm">Non assigné</span>
                                }
                            </td>
                            <td class="px-6 py-4">
                                @switch (p.Statut)
                                {
                                    case StatutProjet.EN_COURS:
                                        <span class="bg-yellow-100 text-yellow-800 px-3 py-1 rounded-full text-xs font-semibold inline-flex items-center">
                                            <i class="fas fa-spinner mr-1"></i>En cours
                                        </span>
                                        break;
                                    case StatutProjet.TERMINE:
                                        <span class="bg-green-100 text-green-800 px-3 py-1 rounded-full text-xs font-semibold inline-flex items-center">
                                            <i class="fas fa-check-circle mr-1"></i>Terminé
                                        </span>
                                        break;
                                    case StatutProjet.EN_ATTENTE:
                                        <span class="bg-gray-100 text-gray-800 px-3 py-1 rounded-full text-xs font-semibold inline-flex items-center">
                                            <i class="fas fa-clock mr-1"></i>En attente
                                        </span>
                                        break;
                                    default:
                                        <span class="bg-blue-100 text-blue-800 px-3 py-1 rounded-full text-xs font-semibold">
                                            @p.Statut
                                        </span>
                                        break;
                                }
                            </td>

                            <td class="px-6 py-4">
                                <div class="flex items-center space-x-2">
                                    <i class="fas fa-users text-gray-400"></i>
                                    <span class="text-sm text-gray-700">@((p.Membres?.Count() ?? 0))</span>
                                </div>
                            </td>

                            <td class="px-6 py-4">
                                <div class="flex items-center justify-end space-x-2">
                                    <a asp-action="Details" asp-route-id="@p.ProjectID"
                                       class="text-gray-600 hover:text-teal-600 transition p-2 rounded-lg hover:bg-teal-50"
                                       title="Voir les détails">
                                        <i class="fas fa-eye"></i>
                                    </a>

                                    @{ 
                                        // calculer si l'utilisateur peut ajouter un membre à CE projet
                                        var isSiteAdminLocal = AuthorizationHelper.IsSiteAdmin(_db, current);
                                        var hasProjectRole = _db.MembreProjets.Any(mp => 
                                            mp.ProjectID == p.ProjectID && 
                                            mp.UserID == current && 
                                            (mp.Role == RoleProjet.Administrateur || mp.Role == RoleProjet.ScrumMaster || mp.Role == RoleProjet.ProductOwner)
                                        );
                                        var teamIdsOfOrg = _db.Equipes.Where(e => e.OrgID == p.OrgID).Select(e => e.TeamID);
                                        var hasTeamRole = teamIdsOfOrg.Any() && _db.MembreEquipes.Any(me => 
                                            teamIdsOfOrg.Contains(me.TeamID) && 
                                            me.UserID == current && 
                                            (me.Role == RoleEquipe.Admin || me.Role == RoleEquipe.ScrumMaster || me.Role == RoleEquipe.ProductOwner)
                                        );
                                        var canAddMember = isSiteAdminLocal || hasProjectRole || hasTeamRole;
                                    }

                                    @if (canAddMember)
                                    {
                                        <a asp-controller="MembreProjet" asp-action="Add" asp-route-projectId="@p.ProjectID"
                                           class="p-2 bg-teal-600 text-white rounded hover:bg-teal-700"
                                           title="Ajouter un membre">
                                            <i class="fas fa-user-plus"></i>
                                        </a>
                                    }

                                    @if (canManageProjects)
                                    {
                                        <a asp-action="Edit" asp-route-id="@p.ProjectID"
                                           class="text-teal-600 hover:text-teal-700 transition p-2 rounded-lg hover:bg-teal-50"
                                           title="Modifier">
                                            <i class="fas fa-edit"></i>
                                        </a>

                                        <a asp-action="Delete" asp-route-id="@p.ProjectID"
                                           class="text-red-600 hover:text-red-700 transition p-2 rounded-lg hover:bg-red-50"
                                           title="Supprimer">
                                            <i class="fas fa-trash-alt"></i>
                                        </a>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
else
{
    <!-- État vide -->
    <div class="bg-white rounded-xl shadow-md p-12 text-center">
        <div class="w-24 h-24 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-6">
            <i class="fas fa-folder-open text-gray-400 text-4xl"></i>
        </div>
        <h3 class="text-2xl font-bold text-gray-800 mb-2">Aucun projet</h3>
        <p class="text-gray-600 mb-6">Commencez par créer votre premier projet</p>
        @if (canManageProjects)
        {
            <a asp-controller="Projects" asp-action="Create"
               class="inline-flex items-center space-x-2 bg-gradient-to-r from-teal-600 to-emerald-600 text-white px-8 py-3 rounded-lg hover:from-teal-700 hover:to-emerald-700 transition shadow-lg">
                <i class="fas fa-plus"></i>
                <span class="font-semibold">Créer un projet</span>
            </a>
        }
    </div>
}