@{
    ViewBag.Title = "Projets";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="p-6">
    <div class="flex items-center justify-between mb-6">
        <h1 class="text-2xl font-bold text-gray-800">Projets</h1>
        <a asp-controller="Projects" asp-action="Create" class="bg-teal-600 text-white px-4 py-2 rounded-lg hover:bg-teal-700">+ Créer un projet</a>
    </div>

    <div class="bg-white rounded-lg shadow overflow-hidden">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Nom</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Clé</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Chef de projet</th>
                    <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                @* Remplacez par un foreach sur votre modèle *@
                <tr>
                    <td class="px-6 py-4 whitespace-nowrap">Projet Exemple</td>
                    <td class="px-6 py-4 whitespace-nowrap">PRJ-001</td>
                    <td class="px-6 py-4 whitespace-nowrap">Alice Dupont</td>
                    <td class="px-6 py-4 whitespace-nowrap text-right">
                        <a asp-controller="Projects" asp-action="Edit" asp-route-id="1" class="text-teal-600 hover:underline mr-3">Éditer</a>
                        <a asp-controller="Projects" asp-action="Details" asp-route-id="1" class="text-gray-600 hover:underline">Voir</a>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>