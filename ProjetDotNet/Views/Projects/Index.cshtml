@model IEnumerable<ProjetDotNet.Models.Projet>
@using ProjetDotNet.Models.Enums
@using ProjetDotNet.Helpers
@inject ProjetDotNet.Data.AppDbContext _db
    @{
    ViewBag.Title = "Projets";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
    var current = AuthorizationHelper.GetCurrentUserId(User, _db);
    var canManageProjects = AuthorizationHelper.IsSiteAdmin(_db, current) || AuthorizationHelper.IsAnyTeamAdmin(_db, current);
}

<!-- En-tête avec bouton d'action -->
<div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-6 gap-4">
    <div>
        <h1 class="text-3xl font-bold text-gray-800 mb-2">Projets</h1>
        <p class="text-gray-600">Gérez tous vos projets et leurs tâches</p>
    </div>
    <!-- bouton créer -->
    @if (canManageProjects)
    {
        <a asp-controller="Projects" asp-action="Create"
           class="bg-gradient-to-r from-teal-600 to-emerald-600 text-white px-6 py-3 rounded-lg hover:from-teal-700 hover:to-emerald-700 transition shadow-lg flex items-center space-x-2">
            <i class="fas fa-plus"></i>
            <span class="font-semibold">Créer un projet</span>
        </a>
    }
</div>

<!-- Statistiques rapides -->
<div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-6">
    <div class="bg-white rounded-xl shadow-md p-6 border-l-4 border-teal-500">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-sm text-gray-600 font-medium">Total projets</p>
                <h3 class="text-3xl font-bold text-gray-800 mt-2">@(Model?.Count() ?? 0)</h3>
            </div>
            <div class="w-14 h-14 bg-teal-100 rounded-full flex items-center justify-center">
                <i class="fas fa-folder text-teal-600 text-2xl"></i>
            </div>
        </div>
    </div>

    <div class="bg-white rounded-xl shadow-md p-6 border-l-4 border-emerald-500">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-sm text-gray-600 font-medium">En cours</p>
                <h3 class="text-3xl font-bold text-gray-800 mt-2">@(Model?.Count(p => p.Statut == StatutProjet.EN_COURS) ?? 0)</h3>
            </div>
            <div class="w-14 h-14 bg-emerald-100 rounded-full flex items-center justify-center">
                <i class="fas fa-spinner text-emerald-600 text-2xl"></i>
            </div>
        </div>
    </div>

    <div class="bg-white rounded-xl shadow-md p-6 border-l-4 border-cyan-500">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-sm text-gray-600 font-medium">Terminés</p>
                <h3 class="text-3xl font-bold text-gray-800 mt-2">@(Model?.Count(p => p.Statut == StatutProjet.TERMINE) ?? 0)</h3>
            </div>
            <div class="w-14 h-14 bg-cyan-100 rounded-full flex items-center justify-center">
                <i class="fas fa-check-circle text-cyan-600 text-2xl"></i>
            </div>
        </div>
    </div>

    <div class="bg-white rounded-xl shadow-md p-6 border-l-4 border-amber-500">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-sm text-gray-600 font-medium">En attente</p>
                <h3 class="text-3xl font-bold text-gray-800 mt-2">@(Model?.Count(p => p.Statut == StatutProjet.EN_ATTENTE) ?? 0)</h3>
            </div>
            <div class="w-14 h-14 bg-amber-100 rounded-full flex items-center justify-center">
                <i class="fas fa-clock text-amber-600 text-2xl"></i>
            </div>
        </div>
    </div>
</div>

