@model ProjetDotNet.Models.Projet
@{
    ViewBag.Title = "Créer un projet";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
    var organisations = ViewBag.Organisations as List<Microsoft.AspNetCore.Mvc.Rendering.SelectListItem> ?? new List<Microsoft.AspNetCore.Mvc.Rendering.SelectListItem>();
    var statuts = ViewBag.Statuts as List<Microsoft.AspNetCore.Mvc.Rendering.SelectListItem> ?? new List<Microsoft.AspNetCore.Mvc.Rendering.SelectListItem>();
}

<!-- En-tête -->
<div class="mb-6">
    <h2 class="text-3xl font-bold text-gray-800 mb-2">Créer un projet</h2>
    <p class="text-gray-600">Créez un nouveau projet pour votre organisation</p>
</div>

<div class="grid grid-cols-1 lg:grid-cols-3 gap-6">

    <!-- Formulaire principal (2/3) -->
    <div class="lg:col-span-2">
        <div class="bg-white rounded-xl shadow-lg p-8">
            <form asp-action="Create" method="post" class="space-y-6">
                @Html.AntiForgeryToken()

                @* Bloc résumé de validation - Affiché uniquement s'il y a des erreurs *@
                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="bg-red-50 border-l-4 border-red-500 p-4 rounded-lg mb-6">
                        <div class="flex items-start">
                            <i class="fas fa-exclamation-circle text-red-500 text-xl mr-3 mt-0.5"></i>
                            <div class="flex-1">
                                <h3 class="text-red-800 font-semibold mb-2">Erreurs de validation</h3>
                                <div asp-validation-summary="All" class="text-red-700 text-sm"></div>
                            </div>
                        </div>
                    </div>
                }

                <!-- Organisation -->
                <div>
                    <label class="block text-sm font-semibold text-gray-700 mb-2">
                        <i class="fas fa-building text-teal-600 mr-2"></i>
                        Organisation <span class="text-red-500">*</span>
                    </label>
                    <select asp-for="OrgID"
                            asp-items="organisations"
                            class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:outline-none focus:border-teal-500 focus:ring-2 focus:ring-teal-200 transition duration-200">
                        <option value="">-- Choisir une organisation --</option>
                    </select>
                    <span asp-validation-for="OrgID" class="text-red-500 text-sm mt-1 block"></span>
                </div>

                <!-- Nom du projet -->
                <div>
                    <label class="block text-sm font-semibold text-gray-700 mb-2">
                        <i class="fas fa-project-diagram text-teal-600 mr-2"></i>
                        Nom du projet <span class="text-red-500">*</span>
                    </label>
                    <input asp-for="Nom"
                           class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:outline-none focus:border-teal-500 focus:ring-2 focus:ring-teal-200 transition duration-200"
                           placeholder="Ex: Application Mobile" />
                    <span asp-validation-for="Nom" class="text-red-500 text-sm mt-1 block"></span>
                </div>

                <!-- Clé du projet -->
                <div>
                    <label class="block text-sm font-semibold text-gray-700 mb-2">
                        <i class="fas fa-key text-teal-600 mr-2"></i>
                        Clé du projet
                    </label>
                    <input asp-for="CleProjet"
                           class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:outline-none focus:border-teal-500 focus:ring-2 focus:ring-teal-200 transition duration-200 font-mono"
                           placeholder="Ex: APP, WEB, API" />
                    <span asp-validation-for="CleProjet" class="text-red-500 text-sm mt-1 block"></span>
                    <p class="text-gray-500 text-xs mt-2">
                        <i class="fas fa-info-circle mr-1"></i>
                        Si vide, la clé sera générée automatiquement à partir du nom
                    </p>
                </div>

                <!-- Description -->
                <div>
                    <label class="block text-sm font-semibold text-gray-700 mb-2">
                        <i class="fas fa-align-left text-teal-600 mr-2"></i>
                        Description
                    </label>
                    <textarea asp-for="Description"
                              rows="4"
                              class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:outline-none focus:border-teal-500 focus:ring-2 focus:ring-teal-200 transition duration-200 resize-none"
                              placeholder="Décrivez l'objectif et le contexte du projet..."></textarea>
                    <span asp-validation-for="Description" class="text-red-500 text-sm mt-1 block"></span>
                </div>

                <!-- Dates -->
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label class="block text-sm font-semibold text-gray-700 mb-2">
                            <i class="fas fa-calendar-plus text-teal-600 mr-2"></i>
                            Date de début
                        </label>
                        <input asp-for="DateDebut"
                               type="date"
                               class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:outline-none focus:border-teal-500 focus:ring-2 focus:ring-teal-200 transition duration-200" />
                        <span asp-validation-for="DateDebut" class="text-red-500 text-sm mt-1 block"></span>
                    </div>
                    <div>
                        <label class="block text-sm font-semibold text-gray-700 mb-2">
                            <i class="fas fa-calendar-check text-teal-600 mr-2"></i>
                            Date de fin
                        </label>
                        <input asp-for="DateFin"
                               type="date"
                               class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:outline-none focus:border-teal-500 focus:ring-2 focus:ring-teal-200 transition duration-200" />
                        <span asp-validation-for="DateFin" class="text-red-500 text-sm mt-1 block"></span>
                    </div>
                </div>

                <!-- Statut -->
                <div>
                    <label class="block text-sm font-semibold text-gray-700 mb-2">
                        <i class="fas fa-info-circle text-teal-600 mr-2"></i>
                        Statut
                    </label>
                    <select asp-for="Statut"
                            asp-items="statuts"
                            class="w-full px-4 py-3 border-2 border-gray-200 rounded-lg focus:outline-none focus:border-teal-500 focus:ring-2 focus:ring-teal-200 transition duration-200"></select>
                    <span asp-validation-for="Statut" class="text-red-500 text-sm mt-1 block"></span>
                </div>

                <!-- Boutons -->
                <div class="flex gap-3 pt-4 border-t border-gray-200">
                    <button type="submit"
                            class="bg-gradient-to-r from-teal-600 to-emerald-600 text-white font-semibold px-6 py-3 rounded-lg hover:from-teal-700 hover:to-emerald-700 transition duration-200 shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 flex items-center space-x-2">
                        <i class="fas fa-check"></i>
                        <span>Créer le projet</span>
                    </button>
                    <a asp-action="Index"
                       class="bg-gray-200 text-gray-700 font-semibold px-6 py-3 rounded-lg hover:bg-gray-300 transition duration-200 flex items-center space-x-2">
                        <i class="fas fa-times"></i>
                        <span>Annuler</span>
                    </a>
                </div>
            </form>
        </div>
    </div>

    <!-- Colonne droite - Aide (1/3) -->
    <div class="space-y-6">

        <!-- Carte d'aide -->
        <div class="bg-white rounded-xl shadow-lg p-6">
            <div class="flex items-center space-x-3 mb-4">
                <div class="w-10 h-10 bg-teal-100 rounded-lg flex items-center justify-center">
                    <i class="fas fa-lightbulb text-teal-600 text-lg"></i>
                </div>
                <h3 class="text-lg font-bold text-gray-800">Conseils</h3>
            </div>
            <ul class="space-y-3 text-sm text-gray-600">
                <li class="flex items-start space-x-2">
                    <i class="fas fa-check text-teal-600 mt-1"></i>
                    <span>Choisissez un nom clair qui décrit l'objectif du projet</span>
                </li>
                <li class="flex items-start space-x-2">
                    <i class="fas fa-check text-teal-600 mt-1"></i>
                    <span>La clé du projet sera utilisée comme préfixe pour les tâches (ex: APP-123)</span>
                </li>
                <li class="flex items-start space-x-2">
                    <i class="fas fa-check text-teal-600 mt-1"></i>
                    <span>Définissez des dates réalistes pour faciliter le suivi</span>
                </li>
                <li class="flex items-start space-x-2">
                    <i class="fas fa-check text-teal-600 mt-1"></i>
                    <span>Vous pourrez ajouter des membres et des tâches après la création</span>
                </li>
            </ul>
        </div>

        <!-- Carte clés d'exemple -->
        <div class="bg-gradient-to-br from-teal-50 to-emerald-50 rounded-xl shadow-lg p-6 border border-teal-200">
            <div class="flex items-center space-x-3 mb-4">
                <div class="w-10 h-10 bg-teal-600 rounded-lg flex items-center justify-center">
                    <i class="fas fa-key text-white text-lg"></i>
                </div>
                <h3 class="text-lg font-bold text-gray-800">Exemples de clés</h3>
            </div>
            <div class="space-y-2">
                <div class="bg-white rounded-lg px-3 py-2 font-mono text-sm text-gray-700 flex items-center justify-between">
                    <span>APP</span>
                    <span class="text-xs text-gray-500">Application</span>
                </div>
                <div class="bg-white rounded-lg px-3 py-2 font-mono text-sm text-gray-700 flex items-center justify-between">
                    <span>WEB</span>
                    <span class="text-xs text-gray-500">Site Web</span>
                </div>
                <div class="bg-white rounded-lg px-3 py-2 font-mono text-sm text-gray-700 flex items-center justify-between">
                    <span>API</span>
                    <span class="text-xs text-gray-500">Backend</span>
                </div>
                <div class="bg-white rounded-lg px-3 py-2 font-mono text-sm text-gray-700 flex items-center justify-between">
                    <span>MOBILE</span>
                    <span class="text-xs text-gray-500">Mobile App</span>
                </div>
            </div>
        </div>

        <!-- Carte informations -->
        <div class="bg-blue-50 rounded-xl shadow-lg p-6 border border-blue-200">
            <div class="flex items-center space-x-3 mb-3">
                <i class="fas fa-info-circle text-blue-600 text-xl"></i>
                <h3 class="font-bold text-gray-800">À savoir</h3>
            </div>
            <p class="text-sm text-gray-700">
                Une fois créé, vous pourrez configurer les sprints, inviter des membres, créer des tâches et suivre la progression du projet en temps réel.
            </p>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}