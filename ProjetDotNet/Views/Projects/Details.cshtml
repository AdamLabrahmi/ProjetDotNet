@model ProjetDotNet.Models.Projet
@using ProjetDotNet.Models.Enums
@{
    ViewBag.Title = "Détails du projet";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="max-w-6xl mx-auto">
    <!-- En-tête avec bannière -->
    <div class="mb-6">
        <div class="bg-gradient-to-r from-teal-600 to-emerald-600 rounded-2xl p-8 shadow-xl">
            <div class="flex items-center justify-between">
                <div class="flex items-center space-x-4 text-white">
                    <div class="w-16 h-16 bg-white bg-opacity-20 rounded-xl flex items-center justify-center">
                        <span class="text-2xl font-bold">@(Model.CleProjet ?? "P")</span>
                    </div>
                    <div>
                        <p class="text-teal-100 text-sm font-medium">Projet</p>
                        <h1 class="text-3xl font-bold">@Model.Nom</h1>
                    </div>
                </div>
                <div class="flex items-center space-x-3">
                    <a asp-action="Edit" asp-route-id="@Model.ProjectID"
                       class="bg-white text-teal-600 px-6 py-3 rounded-lg hover:bg-gray-100 transition shadow-md font-semibold flex items-center space-x-2">
                        <i class="fas fa-edit"></i>
                        <span>Modifier</span>
                    </a>
                    @switch (Model.Statut)
                    {
                        case StatutProjet.EN_COURS:
                            <span class="bg-yellow-400 text-yellow-900 px-4 py-2 rounded-lg text-sm font-bold flex items-center space-x-2">
                                <i class="fas fa-spinner"></i>
                                <span>En cours</span>
                            </span>
                            break;
                        case StatutProjet.TERMINE:
                            <span class="bg-green-400 text-green-900 px-4 py-2 rounded-lg text-sm font-bold flex items-center space-x-2">
                                <i class="fas fa-check-circle"></i>
                                <span>Terminé</span>
                            </span>
                            break;
                        case StatutProjet.EN_ATTENTE:
                            <span class="bg-gray-300 text-gray-800 px-4 py-2 rounded-lg text-sm font-bold flex items-center space-x-2">
                                <i class="fas fa-clock"></i>
                                <span>En attente</span>
                            </span>
                            break;
                        default:
                            <span class="bg-blue-400 text-blue-900 px-4 py-2 rounded-lg text-sm font-bold">
                                @Model.Statut
                            </span>
                            break;
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">

        <!-- Colonne principale (2/3) -->
        <div class="lg:col-span-2 space-y-6">

            <!-- Carte Informations générales -->
            <div class="bg-white rounded-xl shadow-lg p-8">
                <h2 class="text-2xl font-bold text-gray-800 mb-6 flex items-center">
                    <i class="fas fa-info-circle text-teal-600 mr-3"></i>
                    Informations générales
                </h2>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <!-- Clé du projet -->
                    <div>
                        <label class="text-sm font-semibold text-gray-500 uppercase tracking-wide">Clé du projet</label>
                        <div class="mt-2 flex items-center space-x-2">
                            <span class="bg-gray-100 text-gray-800 px-4 py-2 rounded-lg font-mono text-lg font-bold">
                                @(Model.CleProjet ?? "-")
                            </span>
                        </div>
                    </div>

                    <!-- Organisation -->
                    <div>
                        <label class="text-sm font-semibold text-gray-500 uppercase tracking-wide">Organisation</label>
                        <div class="mt-2 flex items-center space-x-2">
                            <i class="fas fa-building text-teal-600 text-xl"></i>
                            @if (Model.Organisation != null)
                            {
                                <span class="text-gray-800 font-medium text-lg">@Model.Organisation.Nom</span>
                            }
                            else
                            {
                                <span class="text-gray-400 italic">Non assigné</span>
                            }
                        </div>
                    </div>

                    <!-- Date de création -->
                    <div>
                        <label class="text-sm font-semibold text-gray-500 uppercase tracking-wide">Date de création</label>
                        <div class="mt-2 flex items-center space-x-2">
                            <i class="fas fa-calendar-plus text-teal-600"></i>
                            <span class="text-gray-800">@Model.DateCreation.ToString("dd MMMM yyyy à HH:mm")</span>
                        </div>
                    </div>

                    <!-- ID du projet -->
                    <div>
                        <label class="text-sm font-semibold text-gray-500 uppercase tracking-wide">ID du projet</label>
                        <div class="mt-2 flex items-center space-x-2">
                            <i class="fas fa-hashtag text-teal-600"></i>
                            <span class="text-gray-800 font-mono">@Model.ProjectID</span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Carte Période du projet -->
            <div class="bg-white rounded-xl shadow-lg p-8">
                <h2 class="text-2xl font-bold text-gray-800 mb-6 flex items-center">
                    <i class="fas fa-calendar-alt text-teal-600 mr-3"></i>
                    Période du projet
                </h2>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <!-- Date de début -->
                    <div class="bg-teal-50 rounded-xl p-6 border-l-4 border-teal-500">
                        <label class="text-sm font-semibold text-gray-500 uppercase tracking-wide">Date de début</label>
                        <div class="mt-2 flex items-center space-x-2">
                            <i class="fas fa-play-circle text-teal-600 text-2xl"></i>
                            <span class="text-gray-800 font-semibold text-lg">
                                @(Model.DateDebut?.ToString("dd MMMM yyyy") ?? "Non définie")
                            </span>
                        </div>
                    </div>

                    <!-- Date de fin -->
                    <div class="bg-emerald-50 rounded-xl p-6 border-l-4 border-emerald-500">
                        <label class="text-sm font-semibold text-gray-500 uppercase tracking-wide">Date de fin</label>
                        <div class="mt-2 flex items-center space-x-2">
                            <i class="fas fa-flag-checkered text-emerald-600 text-2xl"></i>
                            <span class="text-gray-800 font-semibold text-lg">
                                @(Model.DateFin?.ToString("dd MMMM yyyy") ?? "Non définie")
                            </span>
                        </div>
                    </div>
                </div>

                @if (Model.DateDebut.HasValue && Model.DateFin.HasValue)
                {
                    var duree = (Model.DateFin.Value - Model.DateDebut.Value).Days;
                    var progress = Model.DateDebut.Value <= DateTime.Now && DateTime.Now <= Model.DateFin.Value
                    ? (int)(((DateTime.Now - Model.DateDebut.Value).Days / (double)duree) * 100)
                    : DateTime.Now > Model.DateFin.Value ? 100 : 0;

                    <div class="mt-6 bg-gray-50 rounded-xl p-6">
                        <div class="flex items-center justify-between mb-3">
                            <span class="text-sm font-semibold text-gray-600">Progression temporelle</span>
                            <span class="text-sm font-bold text-teal-600">@progress%</span>
                        </div>
                        <div class="w-full bg-gray-200 rounded-full h-3">
                            <div class="bg-gradient-to-r from-teal-500 to-emerald-500 h-3 rounded-full transition-all duration-500" style="width: @(progress + "%")"></div>
                        </div>
                        <p class="text-xs text-gray-500 mt-2">Durée totale : @duree jours</p>
                    </div>
                }
            </div>

            <!-- Carte Description -->
            <div class="bg-white rounded-xl shadow-lg p-8">
                <h2 class="text-2xl font-bold text-gray-800 mb-6 flex items-center">
                    <i class="fas fa-align-left text-teal-600 mr-3"></i>
                    Description
                </h2>
                @if (!string.IsNullOrEmpty(Model.Description))
                {
                    <p class="text-gray-700 leading-relaxed whitespace-pre-wrap">@Model.Description</p>
                }
                else
                {
                    <p class="text-gray-400 italic">Aucune description disponible</p>
                }
            </div>
        </div>

        <!-- Colonne droite (1/3) -->
        <div class="space-y-6">

            <!-- Carte Actions rapides -->
            <div class="bg-white rounded-xl shadow-lg p-6">
                <h3 class="text-lg font-bold text-gray-800 mb-4 flex items-center">
                    <i class="fas fa-bolt text-teal-600 mr-2"></i>
                    Actions rapides
                </h3>
                <div class="space-y-3">
                    <a asp-action="Edit" asp-route-id="@Model.ProjectID"
                       class="w-full bg-teal-600 text-white px-4 py-3 rounded-lg hover:bg-teal-700 transition flex items-center justify-center space-x-2">
                        <i class="fas fa-edit"></i>
                        <span class="font-medium">Modifier le projet</span>
                    </a>
                    <button class="w-full bg-gray-100 text-gray-700 px-4 py-3 rounded-lg hover:bg-gray-200 transition flex items-center justify-center space-x-2">
                        <i class="fas fa-tasks"></i>
                        <span class="font-medium">Voir les tâches</span>
                    </button>
                    <button class="w-full bg-gray-100 text-gray-700 px-4 py-3 rounded-lg hover:bg-gray-200 transition flex items-center justify-center space-x-2">
                        <i class="fas fa-users"></i>
                        <span class="font-medium">Gérer l'équipe</span>
                    </button>
                </div>
            </div>

            <!-- Carte Statistiques -->
            <div class="bg-gradient-to-br from-teal-50 to-emerald-50 rounded-xl shadow-lg p-6 border border-teal-200">
                <h3 class="text-lg font-bold text-gray-800 mb-4 flex items-center">
                    <i class="fas fa-chart-pie text-teal-600 mr-2"></i>
                    Statistiques
                </h3>
                <div class="space-y-4">
                    <div class="bg-white rounded-lg p-4">
                        <div class="flex items-center justify-between">
                            <span class="text-sm text-gray-600">Tâches totales</span>
                            <span class="text-2xl font-bold text-gray-800">0</span>
                        </div>
                    </div>
                    <div class="bg-white rounded-lg p-4">
                        <div class="flex items-center justify-between">
                            <span class="text-sm text-gray-600">Membres</span>
                            <span class="text-2xl font-bold text-gray-800">0</span>
                        </div>
                    </div>
                    <div class="bg-white rounded-lg p-4">
                        <div class="flex items-center justify-between">
                            <span class="text-sm text-gray-600">Sprints</span>
                            <span class="text-2xl font-bold text-gray-800">0</span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Bouton retour -->
            <a asp-action="Index"
               class="w-full bg-gray-200 text-gray-700 px-4 py-3 rounded-lg hover:bg-gray-300 transition flex items-center justify-center space-x-2 font-semibold">
                <i class="fas fa-arrow-left"></i>
                <span>Retour à la liste</span>
            </a>
        </div>
    </div>
</div>