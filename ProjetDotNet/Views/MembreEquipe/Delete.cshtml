@model ProjetDotNet.Models.MembreEquipe
@{
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
    ViewBag.Title = "Retirer membre";
}

<div class="max-w-2xl mx-auto">
    <h2 class="text-2xl font-bold mb-4">Retirer le membre de l'équipe</h2>

    <div class="bg-white rounded-lg p-4 border mb-4">
        <div class="mb-2">
            <label class="text-sm text-gray-600">Utilisateur</label>
            <div class="font-medium">@Model.Utilisateur?.Nom ?? "Utilisateur inconnu"</div>
            <div class="text-sm text-gray-500">@Model.Utilisateur?.Email</div>
        </div>
        <div>
            <label class="text-sm text-gray-600">Rôle actuel</label>
            <div class="font-medium">@Model.Role.ToString()</div>
        </div>
    </div>

    <form asp-controller="MembreEquipe" asp-action="Delete" method="post" onsubmit="return confirm('Retirer ce membre de l\\'équipe ?');">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="TeamID" />
        <input type="hidden" asp-for="UserID" />

        <div class="flex gap-2">
            <button type="submit" class="bg-red-600 text-white px-4 py-2 rounded">Retirer</button>
            <a asp-controller="Equipes" asp-action="Details" asp-route-id="@Model.TeamID" class="px-4 py-2 border rounded text-gray-700">Annuler</a>
        </div>
    </form>
</div>