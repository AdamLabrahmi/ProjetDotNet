@model ProjetDotNet.Models.MembreEquipe
@using ProjetDotNet.Models.Enums
@{
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
    ViewBag.Title = "Modifier membre";
}

<div class="max-w-3xl mx-auto">
    <h2 class="text-2xl font-bold mb-4">Modifier le membre</h2>

    <form asp-controller="MembreEquipe" asp-action="Edit" method="post" class="space-y-4">
        @Html.AntiForgeryToken()

        <input type="hidden" asp-for="TeamID" />
        <input type="hidden" asp-for="UserID" />

        <div class="bg-white rounded-lg p-4 border">
            <div class="mb-3">
                <label class="text-sm text-gray-600 block">Utilisateur</label>
                <div class="font-medium">@Model.Utilisateur?.Nom ?? "Utilisateur inconnu"</div>
                <div class="text-sm text-gray-500">@Model.Utilisateur?.Email</div>
            </div>

            <div>
                <label class="block text-sm font-semibold text-gray-700 mb-1">Rôle</label>
                <select asp-for="Role" asp-items="ViewBag.Roles" class="w-full px-3 py-2 border rounded"></select>
                <span asp-validation-for="Role" class="text-red-500 text-sm"></span>
            </div>
        </div>

        <div class="flex gap-2">
            <button type="submit" class="bg-emerald-600 text-white px-4 py-2 rounded">Enregistrer</button>
            <a asp-controller="Equipes" asp-action="Details" asp-route-id="@Model.TeamID" class="px-4 py-2 border rounded text-gray-700">Annuler</a>
        </div>
    </form>
</div>